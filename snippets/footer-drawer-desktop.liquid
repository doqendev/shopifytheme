{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  /* On larger screens hide the mobile-only menu */
  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .mobile-menu {
      display: none;
    }
    
    /* 
      Use CSS Grid for the footer columns, with the newsletter 
      spanning the last, wider column. Align items at the top.
    */
    .footer-columns {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr 2fr;
      gap: 2rem;
      align-items: start; /* ensures columns are top-aligned */
    }

    /* Column Headings (e.g., AJUDA, APOIO AO CLIENTE) */
    .footer-column span {
      margin: 0 0 0 0!important; 
      font-weight: bold!important;
      font-size: 12px!important;
    }

    .footer-column h2 {
      margin: 0 0 10px 0!important;
      font-weight: 600!important;
      font-size: 12px!important;
      line-height: 1.3!important;
      margin-bottom: 0!important;
    }

    /* Make each column stack its contents from top to bottom */
    .footer-column {
      display: flex!important;
      flex-direction: column!important;
    }
  }

  /* Newsletter headings */
  .newsletter-title {
    margin: 0 0 10px 0;
    font-weight: 600;
    font-size: 12px;
    line-height: 1.3;
  }
  .newsletter-description {
    margin: 0 0 20px 0;
    font-weight: 400;
    font-size: 12px;
    line-height: 1.4;
  }

  /* Remove link underlines and set color; hover style optional */
  .footer-columns a {
    text-decoration: none;
    color: #333;
    font-size: 12px;
  }
  
  .footer-columns a:hover {
    color: black; /* optional */
  }

  /* Newsletter input styles */
  .field__input,
  .newsletter-form__field-wrapper .field__input {
    border: none !important;
    outline: none !important;
    box-shadow: none !important;
    padding: 8px 0;
    font-size: 14px;
  }
  
  .newsletter-form__button {
    background: none;
    border: none;
    cursor: pointer;
  }

  #ContactFooter > div > div > label {
    font-size: 12px;
  }

  .footer-block--newsletter {
    align-items: center!important;
  }

  .footer__content-top {
    padding-bottom: 0rem;
  }

   /* .footer-desktop {
    margin-top: 10rem;
  }
 */
  .footer {
    border: none;
  }

  ul {
      list-style: none!important;
      padding-inline-start: 0px!important;
      margin-block-start: 0em;
  }

  li {
    margin-top: 7px;
  }

  div.footer__content-top.page-width {
      margin-right: 5%;
      margin-left: 5%;
    margin-top: 15%;
    }

  div.footer-column.footer-block--newsletter {
    margin-top: 0;
  }

  .footer-static-image {
  text-align: center;
}

.footer-static-image img {
  display: inline-block;
  width: auto; /* Maintains aspect ratio */
}

  /* Layout adjustments when used inside editorial sections */
  .editorial-footer {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  .editorial-footer .footer__content-top {
    flex-grow: 1;
  }
  .editorial-footer .footer__content-bottom {
    margin-top: auto;
  }

