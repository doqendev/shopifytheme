{% comment %}
  Wrap the grid in an existing container and add an ID so the swatch click functionality can target it.
  (This should not ruin your layout if your themeâ€™s markup already uses these classes.)
{% endcomment %}
{% if first_collection == blank or first_collection.products.size == 0 %}
  <div class="collection collection--empty page-width" id="product-grid">
    <div class="loading-overlay gradient"></div>
    <div class="title-wrapper center">
      <h2 class="title title--primary">
        No related products found.
      </h2>
    </div>
  </div>
{% else %}
  <div class="section-random-collection-padding gradient color-scheme-1">
    <div class="collection page-width" id="ProductGridContainer">
      <div class="loading-overlay gradient"></div>
      <ul id="product-grid" class="grid product-grid">
        {%- assign skip_card_product_styles = false -%}
        {% assign index = 0 %}
        {% for related_product in first_collection.products limit: 13 %}
          {% if related_product.id != product.id %}
            {% assign index = index | plus: 1 %}
            {% assign lazy_load = false %}
            {% if index > 2 %}
              {% assign lazy_load = true %}
            {% endif %}
            <li class="grid__item">
              {% render 'card-product',
                card_product: related_product,
                media_aspect_ratio: 'portrait',
                image_shape: 'default',
                show_secondary_image: false,
                show_vendor: false,
                show_rating: false,
                lazy_load: lazy_load,
                skip_styles: skip_card_product_styles,
                quick_add: 'none',
                section_id: 'product-grid'
              %}
            </li>
            {% assign skip_card_product_styles = true %}
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}

<!-- Swatch Click Script for Random Collection Grid -->
<script>
  // Attach a document-level click listener for swatch clicks inside product cards.
  document.addEventListener('click', function(e) {
    var swatchEl = e.target.closest('.swatch');
    if (!swatchEl) return;
    var card = swatchEl.closest('.product-card-wrapper');
    if (!card) return;
    
    // Remove the active state from all swatches in this card.
    card.querySelectorAll('.swatch').forEach(function(el) {
      el.classList.remove('active');
    });
    swatchEl.classList.add('active');
    
    // Get the new image URL from data-variant-image.
    var newImage = swatchEl.getAttribute('data-variant-image');
    if (!newImage) return;
    
    // Update the card's featured image.
    var mediaContainer = card.querySelector('.card__media');
    if (!mediaContainer) return;
    var img = card.querySelector('.swiper-slide-active img') || mediaContainer.querySelector('img');
    if (img) {
      img.src = newImage;
      img.srcset = newImage;
    }
  });
</script>
