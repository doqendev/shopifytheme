                                      data-filter-value="{{ value.value }}"
                                      {% if value.active %}checked{% endif %}
                                      {% if is_disabled %}disabled{% endif %}
                                    >
                                    <span class="mobile-facet__checkbox-text">{{ value.label }}</span>
                                  </label>
                                {% endif %}
                              </li>
                            {%- endfor -%}
                          </ul>

                        {% when 'price_range' %}
                          <div class="mobile-facet__price-range">
