  <!-- ---------------------------------------------------------------
       SCRIPT: ESCONDE/EXIBE SEÇÕES (SEM SCROLL)
       --------------------------------------------------------------- -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const womanLink   = document.querySelector('#menu-woman-link');
      const homemLink   = document.querySelector('#menu-homem-link');
      const criancaLink = document.querySelector('#menu-crianca-link');

      const sections = {
        women:   document.getElementById('women'),
        homem:   document.getElementById('homem'),
        crianca: document.getElementById('crianca')
      };

      function showSection(key) {
        Object.keys(sections).forEach(k => {
          sections[k].classList.toggle('active', k === key);
        });
      }

      if (womanLink) {
        womanLink.addEventListener('click', function(e) {
          e.preventDefault();
          showSection('women');
        });
      }
      if (homemLink) {
        homemLink.addEventListener('click', function(e) {
          e.preventDefault();
          showSection('homem');
        });
      }
      if (criancaLink) {
        criancaLink.addEventListener('click', function(e) {
          e.preventDefault();
          showSection('crianca');
        });
      }

      // Exibir “Mulher” por padrão
      showSection('women');
    });
  </script>

