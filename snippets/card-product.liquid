  {% if include_card_product_script %}
  <script>
    function initializeProductCardSwipers() {
      // Ensure Swiper library is loaded
      if (typeof Swiper === 'undefined') {
        console.error('Swiper is not loaded. Please include Swiper JS library.');
        return;
      }

      var productCards = document.querySelectorAll('.product-card-wrapper');
      productCards.forEach(function(card, index) {
        var swiperContainer = card.querySelector('.swiper-container');
        if (!swiperContainer) {
          return; // Skip if no media slider is present
        }

        // Remove any forced touchAction override that might block horizontal swipes
        swiperContainer.style.touchAction = 'auto';


        new Swiper(swiperContainer, {
          slidesPerView: 1,
          spaceBetween: 0,
          allowTouchMove: true,
          touchEventsTarget: 'container',
          pagination: {
            el: card.querySelector('.swiper-pagination'),
            clickable: true,
          },
          simulateTouch: true,
          touchRatio: 1,
          grabCursor: true,
          threshold: 0,
          on: {
            init: function() {
              // Update swiper after a short delay in case dimensions change
              setTimeout(() => {
                this.update();
              }, 1000);
            },
            // Additional event listeners can be added here if needed.
          }
        });
      });
    }

    // Initialize Swiper on page load
    document.addEventListener('DOMContentLoaded', function() {
      initializeProductCardSwipers();

      var plusEls = document.querySelectorAll('.product-card-plus');
      var productCards = document.querySelectorAll('.product-card-wrapper');

      function formatMoney(cents) {
        try {
          if (typeof Shopify !== 'undefined' && typeof Shopify.formatMoney === 'function') {
            var moneyFormat = (window.theme && window.theme.moneyFormat) || Shopify.money_format || '{{amount}}â‚¬';
            return Shopify.formatMoney(cents, moneyFormat);
          }
        } catch (error) {
          // Gracefully fall back to a localized fixed-point format when Shopify helpers fail.
        }
      var amount = typeof cents === 'number' ? cents / 100 : parseFloat(cents) / 100;
      if (Number.isNaN(amount)) return '';
      var fallbackCurrency = (Shopify && Shopify.currency && Shopify.currency.active) || 'EUR';
      var currencyFormatter;
      try {
        currencyFormatter = new Intl.NumberFormat(undefined, {
          style: 'currency',
          currency: fallbackCurrency,
          minimumFractionDigits: 2,
          maximumFractionDigits: 2,
        });
        return currencyFormatter.format(amount);
      } catch (formatError) {
        var fallbackSymbol = (Shopify && Shopify.currency && Shopify.currency.symbol) || '';
        var formattedAmount = amount.toFixed(2);
        return fallbackSymbol ? fallbackSymbol + formattedAmount : formattedAmount + ' ' + fallbackCurrency;
      }
    }

      function normalizeOptionValue(value) {
        if (value == null) return '';
        return String(value).trim().toLowerCase();
      }

      function findVariantBySelections(variants, selections) {
        if (!Array.isArray(variants)) return null;
        var normalizedSelections = {};
        Object.keys(selections || {}).forEach(function(key) {
          var normalizedValue = normalizeOptionValue(selections[key]);
          if (normalizedValue) {
            normalizedSelections[key] = normalizedValue;
          }
        });
        var selectionKeys = Object.keys(normalizedSelections);
        if (!selectionKeys.length) {
          return variants[0] || null;
        }
        for (var variantIndex = 0; variantIndex < variants.length; variantIndex += 1) {
          var variant = variants[variantIndex];
          if (!variant || !Array.isArray(variant.options)) continue;
          var allMatch = true;
          for (var keyIndex = 0; keyIndex < selectionKeys.length; keyIndex += 1) {
            var key = selectionKeys[keyIndex];
            var optionIndex = parseInt(key, 10);
            if (Number.isNaN(optionIndex) || optionIndex < 0 || optionIndex >= variant.options.length) {
              allMatch = false;
              break;
            }
            var variantValue = normalizeOptionValue(variant.options[optionIndex] || '');
            if (variantValue !== normalizedSelections[key]) {
              allMatch = false;
              break;
            }
          }
          if (allMatch) {
            return variant;
          }
        }
        return null;
      }

      function parseVariants(card) {
        if (!card) return [];
        try {
          var raw = card.dataset.variants || '[]';
          var decoded = raw.replace(/&quot;/g, '"');
          return JSON.parse(decoded) || [];
        } catch (error) {
          console.warn('Unable to parse variants for card', card, error);
          return [];
        }
      }

      function findVariantForCard(card) {
        if (!card) return null;

        var variants = parseVariants(card);
        if (!variants.length) return null;

        var colorIndex = parseInt(card.dataset.colorIndex || '-1', 10);
        var sizeIndex = parseInt(card.dataset.sizeIndex || '-1', 10);

        var selections = {};

        if (colorIndex >= 0) {
          var selectedColor = normalizeOptionValue(card.dataset.selectedColor || '');
          var activeSwatch = card.querySelector('.swatch.active');
          if (!selectedColor && activeSwatch) {
            selectedColor = normalizeOptionValue(activeSwatch.dataset.color || activeSwatch.dataset.value || '');
          }
          if (selectedColor) {
            selections[colorIndex] = selectedColor;
          }
        }

        if (sizeIndex >= 0) {
          var selectedSize = normalizeOptionValue(card.dataset.selectedSize || '');
          var activeSizeButton = card.querySelector('.product-card-plus .size-option.active');
          if (!selectedSize && activeSizeButton) {
            selectedSize = normalizeOptionValue(activeSizeButton.dataset.size || activeSizeButton.textContent || '');
          }
          if (selectedSize) {
            selections[sizeIndex] = selectedSize;
          }
        }

        var matchedVariant = findVariantBySelections(variants, selections);
        return matchedVariant || variants[0];
      }

      function updateSaleAndSoldOutBadges(priceElement, variant) {
        if (!priceElement) return;
        var saleBadge = priceElement.querySelector('.price__badge-sale');
        var soldOutBadge = priceElement.querySelector('.price__badge-sold-out');
        var onSale = variant && variant.compare_at_price && variant.compare_at_price > variant.price;
        var available = !!(variant && variant.available);

        priceElement.classList.toggle('price--on-sale', !!onSale);
        priceElement.classList.toggle('price--sold-out', !available);

        if (saleBadge && !saleBadge.dataset.defaultText) {
          saleBadge.dataset.defaultText = saleBadge.textContent.trim();
        }

        if (saleBadge) {
          if (onSale) {
            var discount = 0;
            if (variant.compare_at_price) {
              discount = Math.round(((variant.compare_at_price - variant.price) / variant.compare_at_price) * 100);
            }
            var defaultText = saleBadge.dataset.defaultText || saleBadge.textContent || 'Sale';
            saleBadge.textContent = discount > 0 ? '-' + discount + '%' : defaultText;
            saleBadge.classList.remove('hidden');
            saleBadge.style.display = '';
          } else {
            saleBadge.classList.add('hidden');
            saleBadge.style.display = 'none';
          }
        }

        if (soldOutBadge) {
          if (!available) {
            soldOutBadge.classList.remove('hidden');
            soldOutBadge.style.display = '';
          } else {
            soldOutBadge.classList.add('hidden');
            soldOutBadge.style.display = 'none';
          }
        }
      }

      function updateCardPrice(card) {
        if (!card) return;
        var priceElement = card.querySelector('.price');
        var variant = findVariantForCard(card);
        if (!priceElement || !variant) return;

        var formattedPrice = formatMoney(variant.price);
        var formattedCompare = variant.compare_at_price ? formatMoney(variant.compare_at_price) : '';
        var onSale = !!(variant.compare_at_price && variant.compare_at_price > variant.price);

        var regularPrice = priceElement.querySelector('.price__regular .price-item--regular');
        if (regularPrice) {
          regularPrice.textContent = formattedPrice;
        }

        var salePrice = priceElement.querySelector('.price__sale .price-item--sale');
        if (salePrice) {
          salePrice.textContent = formattedPrice;
        }

        var comparePrice = priceElement.querySelector('.price__sale .price-item--regular');
        if (comparePrice) {
          if (onSale && formattedCompare) {
            comparePrice.textContent = formattedCompare;
            if (comparePrice.parentElement) {
              comparePrice.parentElement.style.display = '';
            }
          } else {
            comparePrice.textContent = '';
            if (comparePrice.parentElement) {
              comparePrice.parentElement.style.display = 'none';
            }
          }
        }

        updateSaleAndSoldOutBadges(priceElement, variant);
        card.dataset.productPrice = formattedPrice;
      }

      function updateSizeButtons(card) {
        if (!card) return;
        var variants = parseVariants(card);
        var variantInventory = {};
        try {
          variantInventory = JSON.parse(card.dataset.variantInventory || '{}');
        } catch (e) {}
        var colorIndex = parseInt(card.dataset.colorIndex || '-1', 10);
        var sizeIndex = parseInt(card.dataset.sizeIndex || '-1', 10);
        if (sizeIndex === -1) return;

        var activeSwatch = card.querySelector('.swatch.active');
        var selectedColor = activeSwatch ? activeSwatch.dataset.color : null;

        var sizeAvailability = {};
        var sizeInventory = {};
        variants.forEach(function(v) {
          if (selectedColor && colorIndex !== -1 && v.options[colorIndex] != selectedColor) return;
          var sizeVal = v.options[sizeIndex];
          if (!sizeVal) return;
          var qty = variantInventory[v.id];
          if (sizeAvailability[sizeVal] === undefined) {
            sizeAvailability[sizeVal] = v.available;
            sizeInventory[sizeVal] = qty;
          } else {
            sizeAvailability[sizeVal] = sizeAvailability[sizeVal] || v.available;
            if (qty !== undefined && (sizeInventory[sizeVal] === undefined || qty < sizeInventory[sizeVal])) {
              sizeInventory[sizeVal] = qty;
            }
          }
        });

        var buttons = card.querySelectorAll('.size-options .size-option');
        buttons.forEach(function(btn) {
          var sizeVal = btn.dataset.size;
          var lowStockEl = btn.querySelector('.size-option__low-stock');
          if (sizeAvailability[sizeVal] === undefined) {
            btn.style.display = 'none';
          } else {
            btn.style.display = '';
            if (sizeAvailability[sizeVal]) {
              btn.classList.remove('sold-out');
              btn.disabled = false;
              var qty = sizeInventory[sizeVal];
              if (qty !== undefined && qty > 0 && qty < 5) {
                lowStockEl.classList.remove('hidden');
              } else {
                lowStockEl.classList.add('hidden');
              }
            } else {
              btn.classList.add('sold-out');
              btn.disabled = true;
              if (lowStockEl) lowStockEl.classList.add('hidden');
            }
          }
        });
      }

      productCards.forEach(function(card){
        updateSizeButtons(card);
        updateCardPrice(card);
      });

      function resetSizeOptionsPanel(panel) {
        if (!panel) return;
        panel.classList.remove('size-options--desktop');
        panel.removeAttribute('style');
      }

      function findFixedPositionContext(element) {
        var current = element ? element.parentElement : null;
        while (current && current !== document.body && current !== document.documentElement) {
          var style = window.getComputedStyle(current);
          if (
            (style.transform && style.transform !== 'none') ||
            (style.perspective && style.perspective !== 'none') ||
            (style.willChange && style.willChange.indexOf('transform') !== -1)
          ) {
            return current;
          }
          current = current.parentElement;
        }
        return null;
      }

      function positionSizeOptionsPanel(card, panel) {
        resetSizeOptionsPanel(panel);
        if (!card || !panel) return;
        if (!window.matchMedia('(min-width: 990px)').matches) {
          if (card) {
            card.classList.remove('product-card-wrapper--size-open');
          }
          document.body.classList.remove('size-drawer-open');
          return;
        }

        if (card) {
          card.classList.add('product-card-wrapper--size-open');
        }
        document.body.classList.add('size-drawer-open');

        var rect = card.getBoundingClientRect();
        // Use .card__inner as the anchor since it contains the image and defines the visual boundary
        var cardInner = card.querySelector('.card__inner');
        var anchorRect = cardInner
          ? cardInner.getBoundingClientRect()
          : rect;
        var viewportPadding = 16;
        var desiredWidth = Math.max(0, anchorRect.width || rect.width);
        var left = Math.max(0, anchorRect.width ? anchorRect.left : rect.left);
        var maxLeft = window.innerWidth - desiredWidth;
        if (left > maxLeft) {
          left = Math.max(0, maxLeft);
        }

        var anchorHeight = anchorRect.height || rect.height;
        var availableHeight = Math.max(
          0,
          Math.min(anchorHeight, window.innerHeight - viewportPadding * 2)
        );
        var naturalHeight = panel.scrollHeight;
        var panelHeight = Math.min(naturalHeight, availableHeight);

        if (naturalHeight > availableHeight) {
          panel.style.maxHeight = Math.round(availableHeight) + 'px';
          panel.style.overflowY = 'auto';
        } else {
          panel.style.maxHeight = '';
          panel.style.overflowY = '';
        }

        // Always align the bottom of the drawer with the bottom of the image
        var bottom = window.innerHeight - anchorRect.bottom;
        if (bottom < 0) {
          bottom = 0;
        }

        var fixedContext = findFixedPositionContext(panel);
        if (fixedContext) {
          var contextRect = fixedContext.getBoundingClientRect();
          left -= contextRect.left;
          bottom -= (window.innerHeight - contextRect.bottom);
        }

        panel.classList.add('size-options--desktop');
        panel.style.position = 'fixed';
        panel.style.left = Math.round(left) + 'px';
        panel.style.right = 'auto';
        panel.style.width = Math.round(desiredWidth) + 'px';
        panel.style.zIndex = 1000;
        panel.style.top = 'auto';
        panel.style.bottom = Math.round(bottom) + 'px';
      }

      function repositionActiveSizeOptions() {
        var active = document.querySelector('.product-card-plus.active');
        if (!active) return;
        var panel = active.querySelector('.size-options');
        var card = active.closest('.product-card-wrapper');
        if (!panel || !card) return;
        positionSizeOptionsPanel(card, panel);
      }

      function closeAllPlus() {
        plusEls.forEach(function(el) {
          el.classList.remove('active');
          var panelEl = el.querySelector('.size-options');
          resetSizeOptionsPanel(panelEl);
          var cardEl = el.closest('.product-card-wrapper');
          if (cardEl) {
            cardEl.classList.remove('product-card-wrapper--size-open');
          }
        });
        document.body.classList.remove('size-drawer-open');
      }

      function quickAddVariant(id) {
        var cart = document.querySelector('cart-drawer') || document.querySelector('cart-notification');
        var config = fetchConfig('javascript');
        config.headers['X-Requested-With'] = 'XMLHttpRequest';
        delete config.headers['Content-Type'];

        var formData = new FormData();
        formData.append('id', id);
        formData.append('quantity', 1);
        if (cart) {
          formData.append('sections', cart.getSectionsToRender().map(function(s){ return s.id; }));
          formData.append('sections_url', window.location.pathname);
          cart.setActiveElement(document.activeElement);
        }
        config.body = formData;

        fetch("" + routes.cart_add_url, config)
          .then(function(r){ return r.json(); })
          .then(function(response){
            if (cart) {
              cart.renderContents(response);
            } else {
              window.location = window.routes.cart_url;
            }
            publish(PUB_SUB_EVENTS.cartUpdate, {source:'quick-add-size', productVariantId:id, cartData:response});
          })
          .catch(function(e){ console.error(e); });
      }

      plusEls.forEach(function(el) {
        // Prevent duplicate listeners when the snippet inits repeatedly
        if (el.dataset.quickAddBound === 'true') {
          return;
        }
        el.dataset.quickAddBound = 'true';

        var plusIcon = el.querySelector('.plus-icon');
        var sizeOptions = el.querySelector('.size-options');
        var card = el.closest('.product-card-wrapper');
        var variants = [];
        var colorIndex = -1;
        var sizeIndex = -1;
        if (card) {
          try {
            variants = JSON.parse(card.dataset.variants);
          } catch(e) {}
          colorIndex = parseInt(card.dataset.colorIndex || '-1', 10);
          sizeIndex = parseInt(card.dataset.sizeIndex || '-1', 10);
        }
        if (!plusIcon || !sizeOptions) return;

        var overlayPlus = card ? card.querySelector('.plus-icon--overlay') : null;
        if (overlayPlus && plusIcon) {
          ['click', 'keydown'].forEach(function(evtName) {
            overlayPlus.addEventListener(evtName, function(ev) {
              if (evtName === 'keydown' && ev.key !== 'Enter' && ev.key !== ' ') return;
              ev.preventDefault();
              ev.stopPropagation();
              plusIcon.click();
            });
          });
        }

        plusIcon.addEventListener('click', function(ev) {
          ev.stopPropagation();
          closeAllPlus();
          updateSizeButtons(card);
          el.classList.add('active');
          positionSizeOptionsPanel(card, sizeOptions);
          sizeOptions.focus();
        });

        plusIcon.addEventListener('keydown', function(ev){
          if(ev.key === 'Enter' || ev.key === ' ') {
            ev.preventDefault();
            plusIcon.click();
          }
        });

        sizeOptions.addEventListener('click', function(ev) {
          ev.stopPropagation();
        });

        sizeOptions.addEventListener('keydown', function(ev){
          if(ev.key === 'Escape'){
            el.classList.remove('active');
            resetSizeOptionsPanel(sizeOptions);
            if (card) {
              card.classList.remove('product-card-wrapper--size-open');
            }
            document.body.classList.remove('size-drawer-open');
            plusIcon.focus();
          }
        });

        sizeOptions.querySelectorAll('.size-option').forEach(function(btn){
          btn.addEventListener('click', function(ev){
            ev.stopPropagation();
            var sizeVal = this.dataset.size;
            var vid = null;
            if (variants.length && sizeIndex !== -1) {
              var selectionMap = {};
              if (colorIndex !== -1) {
                var storedColor = card ? normalizeOptionValue(card.dataset.selectedColor || '') : '';
                var activeSwatch = card ? card.querySelector('.swatch.active') : null;
                if (!storedColor && activeSwatch) {
                  storedColor = normalizeOptionValue(activeSwatch.dataset.color || activeSwatch.dataset.value || '');
                }
                if (storedColor) {
                  selectionMap[colorIndex] = storedColor;
                }
              }
              selectionMap[sizeIndex] = sizeVal;
              var matchedVariantForSize = findVariantBySelections(variants, selectionMap);
              if (matchedVariantForSize) {
                vid = matchedVariantForSize.id;
                if (card) {
                  var matchedSizeValue =
                    matchedVariantForSize.options && matchedVariantForSize.options.length > sizeIndex
                      ? matchedVariantForSize.options[sizeIndex]
                      : sizeVal;
                  card.dataset.selectedSize = matchedSizeValue;
                  if (colorIndex !== -1 && matchedVariantForSize.options && matchedVariantForSize.options.length > colorIndex) {
                    card.dataset.selectedColor = matchedVariantForSize.options[colorIndex];
                  }
                }
              }
            }
            if (vid) {
              quickAddVariant(vid);
            }
            closeAllPlus();
          });
          btn.addEventListener('keydown', function(ev){
            if(ev.key === 'Enter' || ev.key === ' '){
              ev.preventDefault();
              btn.click();
            }
          });
        });
      });

      // Close drawer on outside click and prevent other actions from firing
      document.addEventListener('click', function(ev) {
        var openPlus = document.querySelector('.product-card-plus.active');
        if (!openPlus) return;
        var card = openPlus.closest('.product-card-wrapper');
        if (!card) return;
        var clickedInsidePlus = ev.target.closest('.product-card-plus');
        var clickedSwatchSameCard = ev.target.closest('.swatch') && ev.target.closest('.product-card-wrapper') === card;
        if (!clickedInsidePlus && !clickedSwatchSameCard) {
          ev.preventDefault();
          ev.stopPropagation();
          closeAllPlus();
        }
      }, true);

      // Swatch click handling - works for all product cards (collections, recommended products, etc.)
      document.addEventListener('click', function(e) {
        var swatchEl = e.target.closest('.swatch');
        if (!swatchEl) return;
        var card = swatchEl.closest('.product-card-wrapper');
        if (!card) return;
        card.querySelectorAll('.swatch').forEach(function(el) {
          el.classList.remove('active');
        });
        swatchEl.classList.add('active');
        var newImage = swatchEl.getAttribute('data-variant-image');
        if (newImage) {
          var mediaContainer = card.querySelector('.card__media');
          if (mediaContainer) {
            var img = card.querySelector('.swiper-slide-active img') || mediaContainer.querySelector('img');
            if (img) {
              img.src = newImage;
              img.srcset = newImage;
            }
          }
        }
        updateCardPrice(card);
        updateSizeButtons(card);
      });

      window.addEventListener('resize', repositionActiveSizeOptions);
      window.addEventListener('scroll', function() {
        if (!window.matchMedia('(min-width: 990px)').matches) return;
        closeAllPlus();
      }, { passive: true });
    });
  </script>
  {% endif %}

