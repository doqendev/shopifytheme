{%- assign pid = product.id | default: product.selected_or_first_available_variant.product.id -%}
{%- assign variant_id = product.selected_or_first_available_variant.id -%}
{%- assign handle = product.handle -%}
{%- assign title = product.title | escape -%}
{%- assign image = product.featured_image | img_url: '360x' -%}
{%- assign url = product.url -%}
{%- assign price = product.price | money | escape -%}

<button
  class="il-wishlist-btn"
  type="button"
  aria-label="Add to wishlist"
  data-product-id="{{ pid }}"
  data-variant-id="{{ variant_id }}"
  data-handle="{{ handle }}"
  data-title="{{ title }}"
  data-image="{{ image }}"
  data-url="{{ url }}"
  data-price="{{ price }}"
>
  <svg class="il-heart" viewBox="0 0 24 24" aria-hidden="true">
    <path class="il-heart-outline"
      d="M12.1 8.64l-.1.1-.11-.11C10.14 6.82 7.11 6.86 5.28 8.7c-1.84 1.84-1.84 4.82 0 6.66l5.66 5.66c.59.59 1.54.59 2.12 0l5.66-5.66c1.84-1.84 1.84-4.82 0-6.66-1.83-1.84-4.86-1.88-6.62-.06z"
      fill="none" stroke="currentColor" stroke-width="1.6" />
    <path class="il-heart-fill"
      d="M12.1 8.64l-.1.1-.11-.11C10.14 6.82 7.11 6.86 5.28 8.7c-1.84 1.84-1.84 4.82 0 6.66l5.66 5.66c.59.59 1.54.59 2.12 0l5.66-5.66c1.84-1.84 1.84-4.82 0-6.66-1.83-1.84-4.86-1.88-6.62-.06z"
      fill="currentColor" />
  </svg>
</button>
