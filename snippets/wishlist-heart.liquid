{%- comment -%}
  Renders a wishlist heart button for a product
  Usage: {% render 'wishlist-heart', product: product %}
{%- endcomment -%}

<button
  class="wishlist-toggle"
  type="button"
  aria-pressed="false"
  aria-label="{{ 'general.add_to_wishlist' | t | default: 'Adicionar aos favoritos' }}"
>
  <img
    class="wishlist-toggle__icon wishlist-toggle__icon--empty"
    src="{{ 'empty-heart.svg' | asset_url }}"
    alt=""
  >
  <img
    class="wishlist-toggle__icon wishlist-toggle__icon--full"
    src="{{ 'full-heart.svg' | asset_url }}"
    alt=""
  >
</button>
