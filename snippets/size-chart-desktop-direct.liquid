<!-- DESKTOP SIZE GUIDE (Centered Modal) -->
<!-- Inline styles: move these to your theme stylesheet for production -->
<style>
/* Background overlay that covers the entire screen */
.desktop-sizechart-overlay {
  position: fixed;
  top: 0; 
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: none; /* hidden by default */
  z-index: 9999;
}
/* Show overlay + modal when we add .active */
.desktop-sizechart-overlay.active {
  display: block;
}

/* The white modal box in the center of the screen */
.desktop-sizechart-modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  width: 90%;
  max-width: 600px;
  max-height: 90vh;  /* so it’s scrollable if very tall */
  overflow-y: auto;
  border-radius: 6px;
  padding: 20px;
}

/* Close button in the top-right corner of the modal */
.desktop-sizechart-close {
  position: absolute;
  top: 20px;
  right: 20px;
  font-size: 1.8rem;
  cursor: pointer;
}

/* Content container inside the modal */
.desktop-sizechart-content h2 {
  font-size: 1.4rem;
  margin-top: 40px;
  margin-bottom: 20px;
}

/* TAB NAVIGATION (Mulher, Homem, Criança) */
.desktop-sizechart-tabs {
  display: flex;
  gap: 1rem;
  margin: 20px 0;
  list-style: none;
  padding: 0;
}
.desktop-sizechart-tabs button {
  background: none;
  border: none;
  cursor: pointer;
  font-weight: 600;
  font-size: 1rem;
  padding: 4px 8px;
  border-bottom: 2px solid transparent;
}
.desktop-sizechart-tabs button.active {
  border-bottom-color: #000;
}

/* Each tab's panel container: only .active is shown */
.desktop-sizechart-panel {
  display: none;
}
.desktop-sizechart-panel.active {
  display: block;
}

/* Shared styles for each panel's image + overlay */
.desktop-sizechart-image-container {
  position: relative;
  width: 100%;
  max-width: 400px;
  margin: 20px auto;
}
.desktop-sizechart-image {
  width: 100%;
  display: block;
}
.desktop-sizechart-overlay-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.desktop-sizechart-info-box {
  position: absolute;
  background: #fff;
  color: #333;
  font-size: 0.85rem;
  padding: 4px 8px;
  border: 1px solid #ccc;
  white-space: nowrap;
  z-index: 2;
}
/* Arrow lines + arrowheads */
.desktop-sizechart-arrow {
  position: absolute;
  height: 2px;
  background: currentColor;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1;
  filter: drop-shadow(1px 1px 2px rgba(0,0,0,0.2));
}
.desktop-sizechart-arrow-start {
  width: 0;
  height: 0;
  border-right: 6px solid currentColor;
  border-top: 3px solid transparent;
  border-bottom: 3px solid transparent;
  margin-left: -2px;
}
.desktop-sizechart-arrow-end {
  width: 0;
  height: 0;
  border-left: 6px solid currentColor;
  border-top: 3px solid transparent;
  border-bottom: 3px solid transparent;
  margin-right: -2px;
}

/* Unit toggle & size selection */
.desktop-sizechart-units, .desktop-sizechart-sizes {
  display: flex;
  gap: 10px;
  margin: 20px 0;
  font-weight: 600;
}
.desktop-sizechart-unit-btn, .desktop-sizechart-size-btn {
  background: none;
  border: none;
  cursor: pointer;
  font-size: 1rem;
  padding: 4px 8px;
  border-bottom: 2px solid transparent;
}
.desktop-sizechart-unit-btn.active, .desktop-sizechart-size-btn.active {
  border-bottom-color: #000;
}

/* Link that triggers the modal */
.desktop-sizechart-trigger-link {
  cursor: pointer;
  text-decoration: underline;
  color: #333;
}

#open-desktop-sizechart {
  margin-bottom: 20px;
}
</style>

