<!-- Inline script: open/close modal + dynamic measurement updates + tab switching -->
<script>
(function() {
  // 1) Modal open/close
  const openBtn = document.getElementById('open-desktop-sizechart');
  const overlay = document.getElementById('desktop-sizechart-overlay');
  const closeBtn = document.getElementById('close-desktop-sizechart');

  // Open when user clicks "Guia de tamanhos"
  if (openBtn && overlay) {
    openBtn.addEventListener('click', function(e) {
      e.preventDefault();
      overlay.classList.add('active');
    });
  }
  // Close when user clicks "×"
  if (closeBtn && overlay) {
    closeBtn.addEventListener('click', function(e) {
      e.preventDefault();
      overlay.classList.remove('active');
    });
  }
  // **Close if user clicks on overlay background**
  if (overlay) {
    overlay.addEventListener('click', function(e) {
      // If click is directly on the overlay (not a child element), close it
      if (e.target === overlay) {
        overlay.classList.remove('active');
      }
    });
  }

  // 2) Tab switching logic
  const tabButtons = document.querySelectorAll('.desktop-sizechart-tab-btn');
  const panels = document.querySelectorAll('.desktop-sizechart-panel');
  
  tabButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      // Remove 'active' from all buttons & panels
      tabButtons.forEach((b) => b.classList.remove('active'));
      panels.forEach((p) => p.classList.remove('active'));
      
      // Activate the clicked button & correct panel
      btn.classList.add('active');
      const targetPanel = document.getElementById(btn.dataset.tab);
      if (targetPanel) {
        targetPanel.classList.add('active');
      }
    });
  });

  // 3) Desktop measurement data
  const desktopMeasurements = {
    desktopMulher: {
      cm: {
        S:  { collar: 38, chest: 94 },
        M:  { collar: 39, chest: 98 },
        L:  { collar: 40, chest: 102 },
        XL: { collar: 41, chest: 106 },
      },
      in: {
        S:  { collar: 15,   chest: 37 },
        M:  { collar: 15.5, chest: 38.5 },
        L:  { collar: 16,   chest: 40 },
        XL: { collar: 16.5, chest: 41.5 },
      }
    },
    desktopHomem: {
      cm: {
        S:  { collar: 38, chest: 94 },
        M:  { collar: 39, chest: 98 },
        L:  { collar: 40, chest: 102 },
        XL: { collar: 41, chest: 106 },
      },
      in: {
        S:  { collar: 15,   chest: 37 },
        M:  { collar: 15.5, chest: 38.5 },
        L:  { collar: 16,   chest: 40 },
        XL: { collar: 16.5, chest: 41.5 },
      }
    },
    desktopCrianca: {
      cm: {
        6:  { collar: 38, chest: 94 },
        8:  { collar: 39, chest: 98 },
        10:  { collar: 40, chest: 102 },
        12: { collar: 41, chest: 106 },
      },
      in: {
        6:  { collar: 15,   chest: 37 },
        8:  { collar: 15.5, chest: 38.5 },
        10:  { collar: 16,   chest: 40 },
        12: { collar: 16.5, chest: 41.5 },
      }
    }
  };

  // 4) Function to update collar/chest labels
  function updateLabels(group, unit, size) {
    // Convert e.g. 'desktopMulher' to suffix 'mulher'
    let suffix = '';
    if (group === 'desktopMulher')  suffix = 'mulher';
    if (group === 'desktopHomem')   suffix = 'homem';
    if (group === 'desktopCrianca') suffix = 'crianca';

    const collarLabel = document.getElementById(`desktop-collar-label-${suffix}`);
    const chestLabel  = document.getElementById(`desktop-chest-label-${suffix}`);
    if (!collarLabel || !chestLabel) return;

    const data = desktopMeasurements[group][unit][size];
    collarLabel.textContent = data.collar + ' ' + unit;
    chestLabel.textContent  = data.chest  + ' ' + unit;
  }

  // 5) Unit + size button handlers
  const unitButtons = document.querySelectorAll('.desktop-sizechart-unit-btn');
  const sizeButtons = document.querySelectorAll('.desktop-sizechart-size-btn');

  // Default selections
  const currentSelections = {
    desktopMulher: { unit: 'cm', size: 'S' },
    desktopHomem:  { unit: 'cm', size: 'S' },
    desktopCrianca:{ unit: 'cm', size: 'S' }
  };

  // On click of a unit button
  unitButtons.forEach((btn) => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const group = btn.dataset.target;
      const unit = btn.dataset.unit;
      
      // Deactivate all unit buttons in the same group
      unitButtons.forEach((b) => {
        if (b.dataset.target === group) {
          b.classList.remove('active');
        }
      });
      btn.classList.add('active');

      // Update model + labels
      currentSelections[group].unit = unit;
      const currentSize = currentSelections[group].size;
      updateLabels(group, unit, currentSize);
    });
  });

  // On click of a size button
  sizeButtons.forEach((btn) => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const group = btn.dataset.target;
      const size = btn.dataset.size;
      
      // Deactivate all size buttons in the same group
      sizeButtons.forEach((b) => {
        if (b.dataset.target === group) {
          b.classList.remove('active');
        }
      });
      btn.classList.add('active');

      // Update model + labels
      currentSelections[group].size = size;
      const currentUnit = currentSelections[group].unit;
      updateLabels(group, currentUnit, size);
    });
  });

  // 6) Initialize defaults on page load
  Object.keys(currentSelections).forEach((group) => {
    const { unit, size } = currentSelections[group];
    updateLabels(group, unit, size);
  });

  // 7) Automatically open the modal on page load
  openBtn.click();
})();
</script>
