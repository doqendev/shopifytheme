{% comment %}
  This snippet represents the "Trending Now" section with:
  - A full-width background image
  - Overlayed text and button
  - Separate desktop and mobile images
  - Responsive design with a smaller desktop height
  Usage:
    {% render 'trending-now' %}
{% endcomment %}

<style>
  .trending-now-container {
    position: relative;
    width: 100%;
    overflow: hidden; /* ensure no scrollbars if the image is large */
  }

  /* Picture and Image */
  .trending-now__picture,
  .trending-now__picture img {
    display: block;
    width: 100%;
    height: auto;
  }

  /* Overlay container */
  .trending-now__overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff; /* white text on dark image */
    text-align: center;
    padding: 1rem;
  }

  .trending-now__overlay h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .trending-now__overlay p {
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .trending-now__overlay a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .trending-now__overlay a:hover {
    background-color: #333;
  }

  /* Responsive adjustments for mobile */
  @media (max-width: 767px) {
    .trending-now__overlay h2 {
      font-size: 1.5rem;
    }
    .trending-now__overlay p {
      font-size: 0.9rem;
    }
  }

  /* Desktop adjustments: smaller height */
  @media (min-width: 768px) {
    .trending-now-container {
      height: 1000px; /* Set desktop height here */
    }

    .trending-now__picture img {
      height: 100%;
      object-fit: cover;
    }
  }

  .buttonhome {
    background-color: transparent!important;
    color: #fff;
    border: none; /* Remove default border */
    padding: 0.75rem 1.5rem;
    /* Use inset box-shadow to simulate a 0.5px border */
    box-shadow: inset 0 0 0 0.5px #fff;
  }
  
</style>

<section class="trending-now-container">
  <picture class="trending-now__picture">
    <!-- 
      Use 'desktop-image.jpg' for screens >= 768px
      and 'mobile-image.jpg' for smaller screens.
      Replace with your actual asset file names.
    -->
    <source 
      media="(min-width: 768px)" 
      srcset="{{ 'https://cdn.shopify.com/s/files/1/0911/7843/4884/files/fashion-model-in-black-white.jpg?v=1743757550' | link_url }}"
    >
    <img 
      src="{{ 'https://cdn.shopify.com/s/files/1/0911/7843/4884/files/fashion-model-in-black-white.jpg?v=1743755776' | link_url }}" 
      alt="Trending Now"
    >
  </picture>

  <div class="trending-now__overlay">
    <h1 style="color: white">SALDOS</h1>
   
    <a style="margin-top: -10px;"class="buttonhome" href="#">Ver agora</a>
  </div>
</section>
