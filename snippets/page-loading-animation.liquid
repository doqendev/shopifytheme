{% comment %}
  Page Loading Animation
  - Full screen black background
  - Rotating logo in center
  - Background splits in half when page loads
{% endcomment %}

<div id="page-loading-overlay" class="page-loading-overlay">
  <div class="page-loading-overlay__top"></div>
  <div class="page-loading-overlay__bottom"></div>
  <div class="page-loading-overlay__logo">
    {%- comment -%}
      Note: You can change 'chey.png' to your logo filename
      Available options: cheyenne_cart_thicker.png, cheyenne_final.svg, etc.
    {%- endcomment -%}
    <img src="{{ 'chey.png' | asset_url }}" alt="Loading" class="page-loading-overlay__logo-img" onerror="this.src='{{ 'cheyenne_cart_thicker.png' | asset_url }}'">
  </div>
</div>

<style>
  .page-loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 99999;
    pointer-events: none;
  }

  .page-loading-overlay.loaded {
    pointer-events: none;
  }

  .page-loading-overlay__top,
  .page-loading-overlay__bottom {
    position: absolute;
    left: 0;
    width: 100%;
    height: 50%;
    background-color: #000;
    transition: transform 0.8s cubic-bezier(0.645, 0.045, 0.355, 1);
  }

  .page-loading-overlay__top {
    top: 0;
  }

  .page-loading-overlay__bottom {
    bottom: 0;
  }

  /* When loaded, slide the halves away */
  .page-loading-overlay.loaded .page-loading-overlay__top {
    transform: translateY(-100%);
  }

  .page-loading-overlay.loaded .page-loading-overlay__bottom {
    transform: translateY(100%);
  }

  .page-loading-overlay__logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 100000;
    opacity: 1;
    transition: opacity 0.4s ease;
  }

  .page-loading-overlay.loaded .page-loading-overlay__logo {
    opacity: 0;
  }

  .page-loading-overlay__logo-img {
    width: 80px;
    height: auto;
    animation: rotate-logo 2s linear infinite;
  }

  @keyframes rotate-logo {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Hide after animation completes */
  .page-loading-overlay.hidden {
    display: none;
  }
</style>

<script>
  (function() {
    const overlay = document.getElementById('page-loading-overlay');

    if (!overlay) return;

    // Function to hide loading overlay
    function hideLoadingOverlay() {
      overlay.classList.add('loaded');

      // Remove from DOM after animation completes
      setTimeout(() => {
        overlay.classList.add('hidden');
      }, 1000);
    }

    // Hide overlay when page is fully loaded
    if (document.readyState === 'complete') {
      hideLoadingOverlay();
    } else {
      window.addEventListener('load', hideLoadingOverlay);
    }

    // Fallback: hide after 3 seconds maximum
    setTimeout(hideLoadingOverlay, 3000);
  })();
</script>
