{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Match collection page heading styling */
  .collection-header h1.collection-title {
    margin-bottom: 0px!important;
  }

  @media screen and (max-width: 749px) {
    .collection-header h1.collection-title {
      margin-left: 20px;
      font-weight: 500;
      font-size: 1.5rem!important;
      letter-spacing: 0!important;
      margin-bottom: 0px!important;
    }
  }

  @media screen and (min-width: 750px) {
    .collection-header h1.collection-title {
      margin-left: 25px;
      font-weight: 600;
      font-size: 20px;
      line-height: 18px;
      letter-spacing: .56px;
    }
  }

  /* Match collection page grid styling */
  #wishlist-product-grid {
    display: grid;
    gap: 0.6rem;
    margin-block-start: 0px;
    margin-top: 2rem;
    list-style: none;
    padding: 0;
  }

  /* Direct children act as grid items (since JS appends cards directly) */
  #wishlist-product-grid > .card-wrapper,
  #wishlist-product-grid > .product-card-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: stretch;
    width: 100%;
    box-sizing: border-box;
    align-self: start;
    height: 100%!important;
  }

  #wishlist-product-grid > .card-wrapper > *,
  #wishlist-product-grid > .product-card-wrapper > * {
    flex-grow: 1;
  }

  @media screen and (max-width: 749px) {
    #wishlist-product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 750px) {
    #wishlist-product-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  /* Product title link styling - match collection page */
  #wishlist-product-grid .card__heading a,
  #wishlist-product-grid .card__heading a:link,
  #wishlist-product-grid .card__heading a:visited,
  #wishlist-product-grid .card__heading a:hover,
  #wishlist-product-grid .card__heading a:active,
  #wishlist-product-grid .card-wrapper a,
  #wishlist-product-grid .product-card-wrapper a,
  #wishlist-product-grid a.full-unstyled-link {
    text-decoration: none !important;
    color: rgb(var(--color-foreground)) !important;
    border-bottom: none !important;
  }

  /* Force remove all underlines on wishlist page */
  #wishlist-product-grid .underline-links-hover a,
  #wishlist-product-grid .underline-links-hover:hover a,
  #wishlist-product-grid .underline-links-hover a:hover,
  #wishlist-product-grid .card-wrapper:hover a,
  #wishlist-product-grid .product-card-wrapper:hover a {
    text-decoration: none !important;
    text-underline-offset: 0 !important;
    border-bottom: none !important;
  }

  .wishlist-empty {
    text-align: center;
    padding: 4rem 2rem 2rem;
  }

  .wishlist-empty p {
    font-size: 1.125rem;
    color: rgba(var(--color-foreground), 0.75);
    margin-bottom: 1.5rem;
  }

  .wishlist-empty .button {
    margin-top: 1rem;
  }

  .wishlist-recommendations {
    margin-top: 4rem;
    padding: 0 2rem;
  }

  .wishlist-recommendations__title {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: rgb(var(--color-foreground));
  }

  .wishlist-recommendations__grid {
    display: grid;
    gap: 0.6rem;
    margin-bottom: 2rem;
  }

  @media screen and (max-width: 749px) {
    .wishlist-recommendations__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 750px) {
    .wishlist-recommendations__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Sort controls */
  .wishlist-sort {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin: 1.5rem 0 2rem;
    padding: 0 1rem;
    flex-wrap: wrap;
  }

  .wishlist-sort__label {
    font-size: 0.875rem;
    color: rgba(var(--color-foreground), 0.75);
    margin-right: 0.5rem;
  }

  .wishlist-sort__button {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    background: transparent;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 0.25rem;
    color: rgb(var(--color-foreground));
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .wishlist-sort__button:hover {
    border-color: rgb(var(--color-foreground));
    background: rgba(var(--color-foreground), 0.05);
  }

  .wishlist-sort__button.active {
    background: rgb(var(--color-foreground));
    color: rgb(var(--color-background));
    border-color: rgb(var(--color-foreground));
  }

  @media screen and (max-width: 749px) {
    .wishlist-sort {
      gap: 0.375rem;
    }

    .wishlist-sort__button {
      padding: 0.375rem 0.75rem;
      font-size: 0.8125rem;
    }

    .wishlist-sort__label {
      width: 100%;
      text-align: center;
      margin: 0 0 0.5rem 0;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <!-- Wishlist Heading (matches collection page structure) -->
  <div class="collection-header page-width">
    <h1 class="collection-title">{{ section.settings.heading | default: page.title | escape }}</h1>
  </div>

  <div class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" data-wishlist-container>
    <!-- Sort Controls -->
    <div class="wishlist-sort" data-wishlist-sort-controls>
      <span class="wishlist-sort__label">{{ 'general.sort_by' | t | default: 'Ordenar por:' }}</span>
      <button type="button" class="wishlist-sort__button active" data-wishlist-sort="newest" aria-pressed="true">
        {{ 'general.sort_newest' | t | default: 'Mais recente' }}
      </button>
      <button type="button" class="wishlist-sort__button" data-wishlist-sort="oldest" aria-pressed="false">
        {{ 'general.sort_oldest' | t | default: 'Mais antigo' }}
      </button>
      <button type="button" class="wishlist-sort__button" data-wishlist-sort="price-asc" aria-pressed="false">
        {{ 'general.sort_price_asc' | t | default: 'Preço: Baixo-Alto' }}
      </button>
      <button type="button" class="wishlist-sort__button" data-wishlist-sort="price-desc" aria-pressed="false">
        {{ 'general.sort_price_desc' | t | default: 'Preço: Alto-Baixo' }}
      </button>
      <button type="button" class="wishlist-sort__button" data-wishlist-sort="availability" aria-pressed="false">
        {{ 'general.sort_availability' | t | default: 'Disponibilidade' }}
      </button>
    </div>

    <ul id="wishlist-product-grid" class="grid product-grid" data-wishlist-grid role="list"></ul>

    <div class="wishlist-empty" data-wishlist-empty>
      <p>{{ 'general.wishlist_empty' | t | default: 'A sua lista de favoritos está vazia.' }}</p>
      <a href="{{ routes.all_products_collection_url }}" class="button">
        {{ 'general.continue_shopping' | t | default: 'Continuar a comprar' }}
      </a>

      {%- if section.settings.show_recommendations and section.settings.recommendations_collection != blank -%}
        {%- assign recommendations = collections[section.settings.recommendations_collection] -%}
        {%- if recommendations.products.size > 0 -%}
          <div class="wishlist-recommendations">
            <h2 class="wishlist-recommendations__title">
              {{ section.settings.recommendations_heading | default: 'Pode gostar de' }}
            </h2>
            <div class="wishlist-recommendations__grid">
              {%- for product in recommendations.products limit: section.settings.recommendations_limit -%}
                <div class="product-card-wrapper">
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: 'portrait',
                    show_secondary_image: true,
                    show_vendor: false,
                    show_rating: false
                  %}
                </div>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Wishlist Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Favoritos"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show page description",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Empty state recommendations"
    },
    {
      "type": "checkbox",
      "id": "show_recommendations",
      "label": "Show product recommendations when wishlist is empty",
      "default": true
    },
    {
      "type": "collection",
      "id": "recommendations_collection",
      "label": "Collection for recommendations",
      "info": "Select a collection to show when wishlist is empty (e.g., Featured Products, New Arrivals)"
    },
    {
      "type": "text",
      "id": "recommendations_heading",
      "label": "Recommendations heading",
      "default": "Pode gostar de"
    },
    {
      "type": "range",
      "id": "recommendations_limit",
      "min": 4,
      "max": 12,
      "step": 4,
      "label": "Number of products to show",
      "default": 8
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Wishlist Page"
    }
  ]
}
{% endschema %}
