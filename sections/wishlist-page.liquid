{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Match collection page heading styling */
  .collection-header h1.collection-title {
    margin-bottom: 0px!important;
  }

  @media screen and (max-width: 749px) {
    .collection-header h1.collection-title {
      margin-left: 20px;
      font-weight: 500;
      font-size: 1.5rem!important;
      letter-spacing: 0!important;
      margin-bottom: 0px!important;
    }
  }

  @media screen and (min-width: 750px) {
    .collection-header h1.collection-title {
      margin-left: 25px;
      font-weight: 600;
      font-size: 20px;
      line-height: 18px;
      letter-spacing: .56px;
    }
  }

  /* Match collection page grid styling */
  #wishlist-product-grid {
    display: grid;
    gap: 1.2rem;
    margin-block-start: 0px;
    margin-top: 2rem;
    list-style: none;
    padding-left: 1.6rem;
    padding-right: 1.6rem;
  }

  /* Direct children act as grid items (since JS appends cards directly) */
  #wishlist-product-grid > .card-wrapper,
  #wishlist-product-grid > .product-card-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: stretch;
    width: 100% !important;
    max-width: 100% !important;
    box-sizing: border-box;
    align-self: start;
    height: 100%!important;
  }

  #wishlist-product-grid > .card-wrapper > *,
  #wishlist-product-grid > .product-card-wrapper > * {
    flex-grow: 1;
  }

  /* Default grid layout */
  @media screen and (max-width: 749px) {
    #wishlist-product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 750px) {
    #wishlist-product-grid {
      grid-template-columns: repeat(4, minmax(280px, 1fr));
      column-gap: 1.6rem;
      row-gap: 2rem;
      padding-left: 1.6rem;
      padding-right: 1.6rem;
    }
  }

  /* Layout options for mobile */
  @media (max-width: 749px) {
    #wishlist-product-grid.one-col {
      grid-template-columns: 1fr !important;
    }
    #wishlist-product-grid.two-col {
      grid-template-columns: repeat(2, 1fr) !important;
    }
    #wishlist-product-grid.three-col {
      grid-template-columns: repeat(3, 1fr) !important;
    }
  }

  /* Layout options for desktop */
  @media (min-width: 750px) {
    #wishlist-product-grid.one-col {
      grid-template-columns: repeat(auto-fit, minmax(360px, 1fr)) !important;
    }
    #wishlist-product-grid.one-col > * {
      max-width: none;
    }

    #wishlist-product-grid.two-col {
      grid-template-columns: repeat(4, minmax(280px, 1fr)) !important;
      column-gap: 1.6rem;
      row-gap: 2rem;
      padding-left: 1.6rem;
      padding-right: 1.6rem;
    }

    #wishlist-product-grid.three-col {
      grid-template-columns: repeat(8, 1fr) !important;
    }
  }

  /* Three-col layout: Images only - hide content and quick add */
  #wishlist-product-grid.three-col .card__content,
  #wishlist-product-grid.three-col .product-card-plus {
    display: none !important;
  }

  /* Product title link styling - match collection page */
  #wishlist-product-grid .card__heading a,
  #wishlist-product-grid .card__heading a:link,
  #wishlist-product-grid .card__heading a:visited,
  #wishlist-product-grid .card__heading a:hover,
  #wishlist-product-grid .card__heading a:active,
  #wishlist-product-grid .card-wrapper a,
  #wishlist-product-grid .product-card-wrapper a,
  #wishlist-product-grid a.full-unstyled-link {
    text-decoration: none !important;
    color: rgb(var(--color-foreground)) !important;
    border-bottom: none !important;
  }

  /* Force remove all underlines on wishlist page */
  #wishlist-product-grid .underline-links-hover a,
  #wishlist-product-grid .underline-links-hover:hover a,
  #wishlist-product-grid .underline-links-hover a:hover,
  #wishlist-product-grid .card-wrapper:hover a,
  #wishlist-product-grid .product-card-wrapper:hover a {
    text-decoration: none !important;
    text-underline-offset: 0 !important;
    border-bottom: none !important;
  }

  .wishlist-empty {
    text-align: center;
    padding: 4rem 2rem 2rem;
  }

  .wishlist-empty p {
    font-size: 1.125rem;
    color: rgba(var(--color-foreground), 0.75);
    margin-bottom: 1.5rem;
  }

  .wishlist-empty .button {
    margin-top: 1rem;
  }

  .wishlist-recommendations {
    margin-top: 4rem;
    padding: 0 2rem;
  }

  .wishlist-recommendations__title {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: rgb(var(--color-foreground));
  }

  .wishlist-recommendations__grid {
    display: grid;
    gap: 0.6rem;
    margin-bottom: 2rem;
  }

  @media screen and (max-width: 749px) {
    .wishlist-recommendations__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 750px) {
    .wishlist-recommendations__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Wishlist Grid Controls - Match collection page style */
  .wishlist-grid-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
    margin: 1.5rem 0 2rem;
  }

  /* Layout options styling - match collection page */
  .wishlist-layout-options {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .wishlist-layout-option-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.25rem;
    display: flex;
    align-items: center;
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .wishlist-layout-option-button:hover {
    opacity: 0.7;
  }

  .wishlist-layout-option-button.active {
    opacity: 1;
  }

  .wishlist-layout-option-button .grid-icon {
    width: 15px;
    height: 15px;
    display: inline-block;
  }

  /* Only display the full version on active buttons and the empty version on non-active buttons */
  .wishlist-layout-option-button.active .grid-icon--full {
    display: inline-block;
  }

  .wishlist-layout-option-button.active .grid-icon--empty {
    display: none;
  }

  .wishlist-layout-option-button:not(.active) .grid-icon--full {
    display: none;
  }

  .wishlist-layout-option-button:not(.active) .grid-icon--empty {
    display: inline-block;
  }

  .wishlist-facets-toggle-container {
    display: flex;
    align-items: center;
  }

  .wishlist-facets-toggle-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem 1rem;
    font-size: 1.1rem;
    letter-spacing: 0;
    font-family: 'Figtree', Arial, Helvetica, sans-serif;
    color: rgb(var(--color-foreground));
  }

  .wishlist-facets-toggle-button:hover {
    opacity: 0.7;
  }

  /* Wishlist Sort Drawer */
  .wishlist-sort-drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .wishlist-sort-drawer.active {
    display: block;
    opacity: 1;
  }

  .wishlist-sort-drawer__content {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    max-width: 375px;
    height: 100%;
    background: rgb(var(--color-background));
    padding: 2rem;
    overflow-y: auto;
    transform: translateX(100%);
    transition: transform 0.3s ease;
  }

  .wishlist-sort-drawer.active .wishlist-sort-drawer__content {
    transform: translateX(0);
  }

  .wishlist-sort-drawer__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .wishlist-sort-drawer__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
  }

  .wishlist-sort-drawer__close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .wishlist-sort-section {
    margin-bottom: 2rem;
  }

  .wishlist-sort-section__title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .wishlist-sort-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .wishlist-sort-pills__item {
    border: 1px solid #969696;
    padding: 5px 10px;
    text-align: center;
    flex: 0 0 calc(50% - 5px);
  }

  .wishlist-sort-pill {
    background: none;
    border: 0;
    width: 100%;
    display: block;
    padding: 0;
    cursor: pointer;
    font: inherit;
    color: rgb(var(--color-foreground));
  }

  .wishlist-sort-pill.is-active {
    font-weight: bold;
  }

  /* Loading state overlay */
  .wishlist-loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.8);
    z-index: 9998;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .wishlist-loading-overlay.active {
    display: flex;
  }

  .wishlist-loading-spinner {
    width: 48px;
    height: 48px;
    border: 4px solid rgba(var(--color-foreground), 0.1);
    border-top-color: rgb(var(--color-foreground));
    border-radius: 50%;
    animation: wishlist-loading-spin 0.8s linear infinite;
  }

  @keyframes wishlist-loading-spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Fade effect for grid during loading */
  .wishlist-grid-loading {
    opacity: 0.5;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  @media screen and (max-width: 749px) {
    .wishlist-sort-drawer__content {
      max-width: 100%;
    }

    .wishlist-grid-controls {
      padding: 0 1.25rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .wishlist-loading-spinner {
      animation: none !important;
      border-top-color: rgba(var(--color-foreground), 0.5);
    }
  }

  /* Sync Status Indicator */
  .wishlist-sync-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(var(--color-foreground), 0.7);
  }

  .wishlist-sync-status__icon {
    flex-shrink: 0;
  }

  .wishlist-sync-status__icon--synced {
    color: #10b981;
    display: none;
  }

  .wishlist-sync-status__icon--syncing {
    color: #3b82f6;
    display: none;
    animation: sync-spin 1.5s linear infinite;
  }

  .wishlist-sync-status__icon--error {
    color: #ef4444;
    display: none;
  }

  /* Show correct icon based on status */
  .wishlist-sync-status[data-status="synced"] .wishlist-sync-status__icon--synced {
    display: block;
  }

  .wishlist-sync-status[data-status="syncing"] .wishlist-sync-status__icon--syncing {
    display: block;
  }

  .wishlist-sync-status[data-status="error"] .wishlist-sync-status__icon--error {
    display: block;
  }

  @keyframes sync-spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .wishlist-sync-status__text {
    font-weight: 500;
    white-space: nowrap;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .collection-header.page-width {
      flex-direction: column;
      align-items: flex-start !important;
      gap: 0.75rem;
    }

    .wishlist-sync-status {
      font-size: 0.8125rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <!-- Wishlist Heading (matches collection page structure) -->
  <div class="collection-header page-width" style="display: flex; justify-content: space-between; align-items: center;">
    <h1 class="collection-title">{{ section.settings.heading | default: page.title | escape }}</h1>

    <!-- Share/Sync Actions -->
    <div class="wishlist-actions">
      {% if customer %}
        <!-- Sync Status for Logged In Users -->
        <div class="wishlist-sync-status" id="wishlist-sync-status" data-status="synced">
          <svg class="wishlist-sync-status__icon wishlist-sync-status__icon--synced" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" fill="currentColor"/>
          </svg>
          <svg class="wishlist-sync-status__icon wishlist-sync-status__icon--syncing" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z" fill="currentColor"/>
            <path d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z" fill="currentColor"/>
          </svg>
          <svg class="wishlist-sync-status__icon wishlist-sync-status__icon--error" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" fill="currentColor"/>
            <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" fill="currentColor"/>
          </svg>
          <span class="wishlist-sync-status__text">Local</span>
        </div>
      {% endif %}

      <!-- Share Button (For All Users) -->
      <button type="button" class="wishlist-share-button" id="wishlist-share-button" title="Partilhar favoritos">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z" fill="currentColor"/>
        </svg>
        <span>Partilhar</span>
      </button>
    </div>
  </div>

  <!-- Sync Banner for Guest Users -->
  <div class="page-width" style="margin-top: 1.5rem;">
    {% render 'wishlist-sync-banner' %}
  </div>

  <!-- Grid Controls: Layout options and FILTROS button -->
  <div class="wishlist-grid-controls" data-wishlist-controls>
    <div class="wishlist-layout-options">
      <!-- One Column Button -->
      <button type="button" id="wishlist-layout-one-col" class="wishlist-layout-option-button">
        <span class="grid-icon grid-icon--full">
          {{ 'grid_1_thinner_active.svg' | inline_asset_content }}
        </span>
        <span class="grid-icon grid-icon--empty">
          {{ 'grid_1_thinner.svg' | inline_asset_content }}
        </span>
      </button>
      <!-- Two Column Button -->
      <button type="button" id="wishlist-layout-two-col" class="wishlist-layout-option-button active">
        <span class="grid-icon grid-icon--full">
          {{ 'grid_2_thinner_active.svg' | inline_asset_content }}
        </span>
        <span class="grid-icon grid-icon--empty">
          {{ 'grid_2_thinner.svg' | inline_asset_content }}
        </span>
      </button>
      <!-- Three Column (6 grid) Button -->
      <button type="button" id="wishlist-layout-three-col" class="wishlist-layout-option-button">
        <span class="grid-icon grid-icon--full">
          {{ 'grid_4_thinner_active.svg' | inline_asset_content }}
        </span>
        <span class="grid-icon grid-icon--empty">
          {{ 'grid_4_thinner.svg' | inline_asset_content }}
        </span>
      </button>
    </div>
    <div class="wishlist-facets-toggle-container">
      <button type="button" id="wishlist-facets-toggle-button" class="wishlist-facets-toggle-button">
        <span class="facets-icon">FILTROS</span>
      </button>
    </div>
  </div>

  <!-- Loading Overlay -->
  <div class="wishlist-loading-overlay" id="wishlist-loading-overlay">
    <div class="wishlist-loading-spinner"></div>
  </div>

  <!-- Sort Drawer -->
  <div class="wishlist-sort-drawer" id="wishlist-sort-drawer">
    <div class="wishlist-sort-drawer__content">
      <div class="wishlist-sort-drawer__header">
        <h2 class="wishlist-sort-drawer__title">Filtros</h2>
        <button type="button" class="wishlist-sort-drawer__close" id="wishlist-sort-drawer-close" aria-label="Fechar">
          ×
        </button>
      </div>

      <div class="wishlist-sort-section">
        <h3 class="wishlist-sort-section__title">Ordenar por</h3>
        <ul class="wishlist-sort-pills">
          <li class="wishlist-sort-pills__item">
            <button type="button" class="wishlist-sort-pill is-active" data-wishlist-sort="newest">
              Mais recente
            </button>
          </li>
          <li class="wishlist-sort-pills__item">
            <button type="button" class="wishlist-sort-pill" data-wishlist-sort="oldest">
              Mais antigo
            </button>
          </li>
          <li class="wishlist-sort-pills__item">
            <button type="button" class="wishlist-sort-pill" data-wishlist-sort="price-asc">
              Mais barato
            </button>
          </li>
          <li class="wishlist-sort-pills__item">
            <button type="button" class="wishlist-sort-pill" data-wishlist-sort="price-desc">
              Mais caro
            </button>
          </li>
          <li class="wishlist-sort-pills__item">
            <button type="button" class="wishlist-sort-pill" data-wishlist-sort="availability">
              Disponível
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" data-wishlist-container>
    <ul id="wishlist-product-grid" class="grid product-grid" data-wishlist-grid role="list"></ul>

    <div class="wishlist-empty" data-wishlist-empty>
      <p>{{ 'general.wishlist_empty' | t | default: 'A sua lista de favoritos está vazia.' }}</p>

      {%- if section.settings.show_recommendations and section.settings.recommendations_collection != blank -%}
        {%- assign recommendations = collections[section.settings.recommendations_collection] -%}
        {%- if recommendations.products.size > 0 -%}
          <div class="wishlist-recommendations">
            <h2 class="wishlist-recommendations__title">
              {{ section.settings.recommendations_heading | default: 'Pode gostar de' }}
            </h2>
            <div class="wishlist-recommendations__grid">
              {%- for product in recommendations.products limit: section.settings.recommendations_limit -%}
                <div class="product-card-wrapper">
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: 'portrait',
                    show_secondary_image: true,
                    show_vendor: false,
                    show_rating: false
                  %}
                </div>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Wishlist Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Favoritos"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show page description",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Empty state recommendations"
    },
    {
      "type": "checkbox",
      "id": "show_recommendations",
      "label": "Show product recommendations when wishlist is empty",
      "default": true
    },
    {
      "type": "collection",
      "id": "recommendations_collection",
      "label": "Collection for recommendations",
      "info": "Select a collection to show when wishlist is empty (e.g., Featured Products, New Arrivals)"
    },
    {
      "type": "text",
      "id": "recommendations_heading",
      "label": "Recommendations heading",
      "default": "Pode gostar de"
    },
    {
      "type": "range",
      "id": "recommendations_limit",
      "min": 4,
      "max": 12,
      "step": 4,
      "label": "Number of products to show",
      "default": 8
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
