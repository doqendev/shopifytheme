{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Match collection page grid styling */
  #wishlist-product-grid {
    display: grid;
    gap: 0.6rem;
    margin-block-start: 0px;
    margin-top: 2rem;
    list-style: none;
    padding: 0;
  }

  /* Direct children act as grid items (since JS appends cards directly) */
  #wishlist-product-grid > .card-wrapper,
  #wishlist-product-grid > .product-card-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: stretch;
    width: 100%;
    box-sizing: border-box;
    align-self: start;
    height: 100%!important;
  }

  #wishlist-product-grid > .card-wrapper > *,
  #wishlist-product-grid > .product-card-wrapper > * {
    flex-grow: 1;
  }

  @media screen and (max-width: 749px) {
    #wishlist-product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 750px) {
    #wishlist-product-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  .wishlist-empty {
    text-align: center;
    padding: 4rem 2rem;
  }

  .wishlist-empty p {
    font-size: 1.125rem;
    color: rgba(var(--color-foreground), 0.75);
    margin-bottom: 1.5rem;
  }

  .wishlist-empty .button {
    margin-top: 1rem;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ section.settings.heading | default: page.title | escape }}
    </h1>

    {%- if section.settings.show_description and page.content != blank -%}
      <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ page.content }}
      </div>
    {%- endif -%}

    <div class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" data-wishlist-container>
      <ul id="wishlist-product-grid" class="grid product-grid" data-wishlist-grid role="list"></ul>

      <div class="wishlist-empty" data-wishlist-empty>
        <p>{{ 'general.wishlist_empty' | t | default: 'Your wishlist is empty.' }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="button">
          {{ 'general.continue_shopping' | t | default: 'Continue shopping' }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Wishlist Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Favoritos"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show page description",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Wishlist Page"
    }
  ]
}
{% endschema %}
