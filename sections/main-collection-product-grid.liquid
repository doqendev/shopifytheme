<script>
  // Global initializer for grid options
  window.initializeGridOptions = function() {
    var grid = document.getElementById('product-grid');
    var btnOneCol = document.getElementById('layout-one-col');
    var btnTwoCol = document.getElementById('layout-two-col');
    var btnThreeCol = document.getElementById('layout-three-col');

    if (!grid || !btnOneCol || !btnTwoCol || !btnThreeCol) return;

    // Optionally, remove any previously bound events
    btnOneCol.replaceWith(btnOneCol.cloneNode(true));
    btnTwoCol.replaceWith(btnTwoCol.cloneNode(true));
    btnThreeCol.replaceWith(btnThreeCol.cloneNode(true));

    // Re-select after cloning
    btnOneCol = document.getElementById('layout-one-col');
    btnTwoCol = document.getElementById('layout-two-col');
    btnThreeCol = document.getElementById('layout-three-col');

    function setActive(button) {
      [btnOneCol, btnTwoCol, btnThreeCol].forEach(function(btn) {
        if (btn) btn.classList.toggle('active', btn === button);
      });
    }

    btnOneCol.addEventListener('click', function() {
      animateGridTransition(grid, 'one-col', ['two-col', 'three-col']);
      setActive(btnOneCol);
    });

    btnTwoCol.addEventListener('click', function() {
      animateGridTransition(grid, 'two-col', ['one-col', 'three-col']);
      setActive(btnTwoCol);
    });

    btnThreeCol.addEventListener('click', function() {
      animateGridTransition(grid, 'three-col', ['one-col', 'two-col']);
      setActive(btnThreeCol);
    });

    // Pure CSS Grid transition - browser handles animation natively
    function animateGridTransition(grid, newClass, removeClasses) {
      // Simply change the classes - CSS handles all animation
      removeClasses.forEach(function(cls) {
        grid.classList.remove(cls);
      });
      grid.classList.add(newClass);
    }

    // Apply the layout corresponding to the active button without triggering a click
    if (btnOneCol.classList.contains('active')) {
      grid.classList.add('one-col');
    } else if (btnTwoCol.classList.contains('active')) {
      grid.classList.add('two-col');
    } else if (btnThreeCol.classList.contains('active')) {
      grid.classList.add('three-col');
    }
  };

  document.addEventListener('DOMContentLoaded', function() {
    window.initializeGridOptions();

    // Facets toggle functionality
    var facetsToggleBtn = document.getElementById('facets-toggle-button');
    var facetsDrawerSummary = document.querySelector('menu-drawer details.mobile-facets__disclosure summary.mobile-facets__open-wrapper');
    var facetsWrapper = document.getElementById('main-collection-filters');

    if (facetsToggleBtn) {
      facetsToggleBtn.addEventListener('click', function() {
        if (facetsDrawerSummary) {
          facetsDrawerSummary.click();
        } else if (facetsWrapper) {
          facetsWrapper.classList.toggle('active');
          facetsToggleBtn.classList.toggle('active');
        }
      });
    }

    // Function to update FILTROS count dynamically
    function updateFiltrosCount() {
      var facetsIcon = document.querySelector('.facets-icon');
      if (!facetsIcon) return;

      // Group filters by their base parameter name
      var filterGroups = {};
      var productTypeCount = 0; // Special counter for product types
      var urlParams = new URLSearchParams(window.location.search);
      var priceMin = null;
      var priceMax = null;

      urlParams.forEach(function(value, key) {
        // Only process filter parameters (not sort_by)
        if (key.startsWith('filter.') && key !== 'sort_by') {
          // Skip empty values
          if (!value || value.trim() === '') {
            return;
          }

          // Handle price filters specially - need to check if they're meaningful
          if (key.includes('price.gte')) {
            priceMin = parseInt(value) || 0;
            return; // Don't count yet
          } else if (key.includes('price.lte')) {
            priceMax = parseInt(value) || 0;
            return; // Don't count yet
          }

          // Extract the filter type
          var filterType = key;

          // Special handling for product_type - count each value separately
          if (key === 'filter.p.product_type') {
            productTypeCount++;
            return; // Don't add to filterGroups
          }

          // Group taxonomy filters (filter.v.t.shopify.*)
          if (key.match(/filter\.v\.t\.shopify\./)) {
            // Extract taxonomy attribute (e.g., 'color-pattern', 'size', etc.)
            var parts = key.split('.');
            if (parts.length >= 5) {
              filterType = 'filter.v.t.shopify.' + parts[4];
            }
          }
          // Group variant options by their attribute (color, size, etc.)
          else if (key.match(/filter\.v\.option\./)) {
            var parts = key.split('.');
            if (parts.length >= 4) {
              filterType = 'filter.v.option.' + parts[3];
            }
          }
          // Group other product properties
          else if (key.match(/filter\.p\./)) {
            var parts = key.split('.');
            if (parts.length >= 3) {
              filterType = 'filter.p.' + parts[2];
            }
          }

          // Mark this filter group as active
          filterGroups[filterType] = true;
        }
      });

      // Check if price filter is meaningful (not default/full range)
      // Only count price if minimum is > 0 (user set a minimum)
      if (priceMin !== null && priceMax !== null) {
        if (priceMin > 0) {
          filterGroups['filter.v.price'] = true;
        }
      }

      // Count unique filter groups + individual product type selections
      var count = Object.keys(filterGroups).length + productTypeCount;

      // Update button text
      var baseText = 'FILTROS';
      var existingCount = facetsIcon.querySelector('.filtros-count');

      if (count > 0) {
        if (existingCount) {
          existingCount.textContent = '(' + count + ')';
        } else {
          facetsIcon.innerHTML = baseText + ' <span class="filtros-count">(' + count + ')</span>';
        }
      } else {
        if (existingCount) {
          existingCount.remove();
        }
        facetsIcon.innerHTML = baseText;
      }
    }

    // Update count on page load
    updateFiltrosCount();

    // Listen for filter changes (Shopify's AJAX updates)
    document.addEventListener('shopify:section:load', updateFiltrosCount);

    // Watch for DOM changes in the product grid container (catches AJAX updates)
    var productGridContainer = document.getElementById('ProductGridContainer');
    if (productGridContainer) {
      var observer = new MutationObserver(function(mutations) {
        updateFiltrosCount();
      });
      observer.observe(productGridContainer, {
        childList: true,
        subtree: true
      });
    }

    // Also listen for facets form submission
    var facetsForms = document.querySelectorAll('facet-filters-form form');
    facetsForms.forEach(function(form) {
      form.addEventListener('submit', function() {
        setTimeout(updateFiltrosCount, 100);
      });
    });

    // Listen for popstate (browser back/forward)
    window.addEventListener('popstate', function() {
      setTimeout(updateFiltrosCount, 100);
    });
  });
