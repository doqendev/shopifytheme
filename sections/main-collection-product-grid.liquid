<script>
  (function() {
    var state = window.__collectionInfiniteScrollState || {
      observer: null,
      sentinel: null,
      nextPageUrl: null,
      loading: false,
      manualTriggerEnabled: false,
      placeholderNodes: []
    };
    window.__collectionInfiniteScrollState = state;
    if (!Array.isArray(state.placeholderNodes)) {
      state.placeholderNodes = [];
    }

    function getProductGrid() {
      return document.getElementById('product-grid');
    }

    function getPaginationElement(root) {
      var scope = root || document.getElementById('ProductGridContainer');
      if (!scope) return null;
      return scope.querySelector('.pagination');
    }

    function getPaginationDataElement(root) {
      var scope = root || document;
      if (!scope) return null;
      return scope.getElementById('collection-pagination-data');
    }

    function getNextPageUrlFromPagination(paginationElement, paginationDataElement) {
      if (paginationDataElement && paginationDataElement.dataset) {
        var dataNext = paginationDataElement.dataset.nextUrl;
        if (dataNext) {
          return dataNext;
        }
      }
      if (!paginationElement) return null;
      var nextArrow = paginationElement.querySelector('.pagination__item--prev');
      if (nextArrow && nextArrow.href) {
        return nextArrow.href;
      }
      var relNext = paginationElement.querySelector('a[rel="next"]');
      if (relNext && relNext.href) {
        return relNext.href;
      }
      return null;
    }

    function toggleLoader(show) {
      var loader = document.getElementById('collection-infinite-loader');
      if (loader) {
        if (show) {
          loader.removeAttribute('hidden');
        } else {
          loader.setAttribute('hidden', 'hidden');
        }
      }
    }

    function getPlaceholderCount() {
      var grid = getProductGrid();
      if (!grid) return 0;
      var perPage = parseInt(grid.getAttribute('data-products-per-page'), 10);
      if (!isNaN(perPage) && perPage > 0 && perPage < 100) {
        return perPage;
      }
      return 6;
    }

    function createPlaceholderElement() {
      var li = document.createElement('li');
      li.className = 'grid__item collection-product-placeholder';
      li.setAttribute('aria-hidden', 'true');
      li.innerHTML =
        "<div class=\"card-skeleton card-skeleton--spinner\">" +
          "<img src=\"{{ 'chey.png' | file_url }}\" " +
               "alt=\"{{ 'accessibility.loading' | t }}\" " +
               "class=\"card-skeleton__spinner\" " +
               "onerror=\"this.src='{{ 'cheyenne_cart_thicker.png' | asset_url }}'\" " +
               "loading=\"lazy\" decoding=\"async\">" +
        "</div>";
      return li;
    }

    function insertPlaceholders(count) {
      removePlaceholders();
      var grid = getProductGrid();
      if (!grid || !count) return;

      state.placeholderNodes = [];
      for (var i = 0; i < count; i += 1) {
        var placeholder = createPlaceholderElement();
        grid.appendChild(placeholder);
        state.placeholderNodes.push(placeholder);
      }
    }

    function removePlaceholders() {
      if (!state.placeholderNodes || !state.placeholderNodes.length) return;
      state.placeholderNodes.forEach(function(node) {
        if (node && node.parentNode) {
          node.parentNode.removeChild(node);
        }
      });
      state.placeholderNodes = [];
    }

    function removeSentinel() {
      if (!state.sentinel) return;
      if (state.observer) {
        state.observer.unobserve(state.sentinel);
      }
      if (state.sentinel.parentNode) {
        state.sentinel.parentNode.removeChild(state.sentinel);
      }
      state.sentinel = null;
    }

    function ensureSentinel(grid) {
      if (!grid) return null;
      var sentinel = document.getElementById('collection-infinite-scroll-sentinel');
      if (!sentinel) {
        sentinel = document.createElement('div');
        sentinel.id = 'collection-infinite-scroll-sentinel';
        sentinel.className = 'collection-infinite-scroll-sentinel';
        sentinel.setAttribute('aria-hidden', 'true');
      }

      var loader = document.getElementById('collection-infinite-loader');
      if (loader) {
        loader.insertAdjacentElement('afterend', sentinel);
      } else {
        grid.insertAdjacentElement('afterend', sentinel);
      }

      state.sentinel = sentinel;
      return sentinel;
    }

    function togglePaginationVisibility(shouldHide) {
      var pagination = getPaginationElement();
      if (!pagination) return;
      if (shouldHide) {
        pagination.classList.add('pagination--is-hidden');
      } else {
        pagination.classList.remove('pagination--is-hidden');
      }
    }

    function updatePaginationDataFromDocument(doc) {
      var incomingData = getPaginationDataElement(doc);
      var existingData = getPaginationDataElement();

      if (!incomingData && !existingData) return;

      if (!existingData && incomingData) {
        var gridContainer = document.getElementById('ProductGridContainer');
        if (gridContainer) {
          gridContainer.appendChild(incomingData.cloneNode(true));
        }
        return;
      }

      if (!existingData) return;

      if (incomingData && incomingData.dataset) {
        existingData.dataset.nextUrl = incomingData.dataset.nextUrl || '';
        existingData.dataset.currentPage = incomingData.dataset.currentPage || '';
        existingData.dataset.totalPages = incomingData.dataset.totalPages || '';
      } else {
        existingData.dataset.nextUrl = '';
      }
    }

    function observerCallback(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          fetchNextPage();
        }
      });
    }

    function setupObserver() {
      if (!('IntersectionObserver' in window)) {
        enableManualTrigger();
        return;
      }
      if (!state.observer) {
        state.observer = new IntersectionObserver(observerCallback, {
          rootMargin: '400px 0px 200px'
        });
      } else {
        state.observer.disconnect();
      }
      enableManualTrigger();
    }

    function initializeInfiniteScroll() {
      var grid = getProductGrid();
      if (!grid) {
        removeSentinel();
        return;
      }

      var paginationElement = getPaginationElement();
      var paginationDataElement = getPaginationDataElement();
      state.nextPageUrl = getNextPageUrlFromPagination(paginationElement, paginationDataElement);

      if (!state.nextPageUrl) {
        togglePaginationVisibility(false);
        removeSentinel();
        return;
      }

      togglePaginationVisibility(true);
      setupObserver();
      var sentinel = ensureSentinel(grid);
      if (state.observer && sentinel) {
        state.observer.observe(sentinel);
      }
      enableManualTrigger();
      checkManualTrigger();
    }

    function appendProductsFromDocument(doc) {
      var newGrid = doc.getElementById('product-grid');
      var currentGrid = getProductGrid();
      if (!newGrid || !currentGrid) return;

      Array.prototype.slice.call(newGrid.children).forEach(function(item) {
        currentGrid.appendChild(item);
      });
    }

    function updatePaginationFromDocument(doc) {
      var incomingWrapper = doc.querySelector('.pagination-wrapper');
      var collectionWrapper = document.querySelector('#ProductGridContainer .collection');
      var existingWrapper = collectionWrapper ? collectionWrapper.querySelector('.pagination-wrapper') : null;

      if (incomingWrapper && collectionWrapper) {
        if (existingWrapper) {
          existingWrapper.innerHTML = incomingWrapper.innerHTML;
        } else {
          collectionWrapper.appendChild(incomingWrapper.cloneNode(true));
        }
      } else if (!incomingWrapper && existingWrapper) {
        existingWrapper.remove();
      }

      updatePaginationDataFromDocument(doc);

      var paginationElement = getPaginationElement();
      var paginationDataElement = getPaginationDataElement();
      state.nextPageUrl = getNextPageUrlFromPagination(paginationElement, paginationDataElement);

      if (!state.nextPageUrl) {
        togglePaginationVisibility(false);
        removeSentinel();
        if (state.observer) {
          state.observer.disconnect();
        }
        disableManualTrigger();
      } else {
        togglePaginationVisibility(true);
        enableManualTrigger();
        checkManualTrigger();
      }
    }

    function resetLoadingState() {
      state.loading = false;
      removePlaceholders();
      toggleLoader(false);
    }

    function getManualTriggerTarget() {
      if (state.sentinel && state.sentinel.isConnected) {
        return state.sentinel;
      }
      var loader = document.getElementById('collection-infinite-loader');
      if (loader) return loader;
      var grid = getProductGrid();
      if (grid && grid.lastElementChild) {
        return grid.lastElementChild;
      }
      return null;
    }

    function checkManualTrigger() {
      if (!state.manualTriggerEnabled || !state.nextPageUrl || state.loading) return;
      var target = getManualTriggerTarget();
      if (!target) return;

      var rect = target.getBoundingClientRect();
      if (rect.top <= window.innerHeight + 80) {
        fetchNextPage();
      }
    }

    function enableManualTrigger() {
      if (state.manualTriggerEnabled) return;
      state.manualTriggerEnabled = true;
      window.addEventListener('scroll', checkManualTrigger);
      window.addEventListener('resize', checkManualTrigger);
      window.addEventListener('orientationchange', checkManualTrigger);
      setTimeout(checkManualTrigger, 300);
    }

    function disableManualTrigger() {
      if (!state.manualTriggerEnabled) return;
      state.manualTriggerEnabled = false;
      window.removeEventListener('scroll', checkManualTrigger);
      window.removeEventListener('resize', checkManualTrigger);
      window.removeEventListener('orientationchange', checkManualTrigger);
    }

    function fetchNextPage() {
      if (!state.nextPageUrl || state.loading) return;
      state.loading = true;
      insertPlaceholders(getPlaceholderCount());
      toggleLoader(true);

      fetch(state.nextPageUrl, {
        credentials: 'same-origin',
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
      })
        .then(function(response) {
          return response.text();
        })
        .then(function(html) {
          var parser = new DOMParser();
          var doc = parser.parseFromString(html, 'text/html');
          removePlaceholders();
          appendProductsFromDocument(doc);
          updatePaginationFromDocument(doc);

          if (typeof window.initializeGridOptions === 'function') {
            window.initializeGridOptions();
          }
          if (typeof window.initializeProductCardSwipers === 'function') {
            window.initializeProductCardSwipers();
          }
          if (typeof window.initializeQuickAddListeners === 'function') {
            window.initializeQuickAddListeners();
          }
          resetLoadingState();
        })
        .catch(function(error) {
          console.error('Collection infinite scroll error:', error);
          resetLoadingState();
        });
    }

    window.initializeCollectionInfiniteScroll = function() {
      resetLoadingState();
      initializeInfiniteScroll();
    };

    function runWhenReady(callback) {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', callback);
      } else {
        callback();
      }
    }

    runWhenReady(initializeInfiniteScroll);

    document.addEventListener('shopify:section:load', function(event) {
      if (event && event.detail && event.detail.sectionId === '{{ section.id }}') {
        initializeInfiniteScroll();
      }
    });
  })();
</script>

