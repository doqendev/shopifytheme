{% comment %}
  Editorial vertical auto-scroll: all blocks rendered, auto-scrolls to next block after 5s idle, fade-jump to top after last block (10s wait).
  Mobile and desktop images are exclusive. Auto-scroll stops with 200px top margin.
{% endcomment %}

<section class="editorial-auto-scroll" id="editorial-auto-scroll">
  {% for block in section.blocks %}
    {% assign border_color = block.settings.border_color | default: '#eaeada' %}
    {% assign border_width = block.settings.border_width | default: 24 %}
    {% assign max_width = block.settings.max_width | default: 840 %}
    {% assign margin_top = block.settings.margin_top | default: 0 %}
    {% assign margin_bottom = block.settings.margin_bottom | default: 0 %}
    {% assign margin_top_mobile = block.settings.margin_top_mobile | default: 0 %}
    {% assign margin_bottom_mobile = block.settings.margin_bottom_mobile | default: 0 %}
    {% assign max_width_mobile = block.settings.max_width_mobile | default: 360 %}
    {% assign border_width_mobile = block.settings.border_width_mobile | default: 8 %}
    <div class="editorial-polaroid-frame"
      id="editorial-polaroid-{{ forloop.index0 }}"
      style="
        background: {{ border_color }};
        padding: {{ border_width }}px;
        max-width: {{ max_width }}px;
        margin-top: {{ margin_top }}px;
        margin-bottom: {{ margin_bottom }}px;
        --mobile-margin-top: {{ margin_top_mobile }}px;
        --mobile-margin-bottom: {{ margin_bottom_mobile }}px;
        --mobile-max-width: {{ max_width_mobile }}px;
        --mobile-border-width: {{ border_width_mobile }}px;
      ">
      {% if block.settings.image_desktop != blank %}
        <img
          src="{{ block.settings.image_desktop | image_url: width: 1400 }}"
          alt="{{ block.settings.caption | strip_html | default: 'Editorial image' }}"
          loading="lazy"
          class="editorial-polaroid-img editorial-polaroid-img--desktop"
        >
      {% endif %}
      {% if block.settings.image_mobile != blank %}
        <img
          src="{{ block.settings.image_mobile | image_url: width: 800 }}"
          alt="{{ block.settings.caption | strip_html | default: 'Editorial image' }}"
          loading="lazy"
          class="editorial-polaroid-img editorial-polaroid-img--mobile"
        >
      {% elsif block.settings.image_desktop == blank %}
        <div class="editorial-polaroid-placeholder">
          No image selected
        </div>
      {% endif %}
      {% if block.settings.caption != blank %}
        <div class="editorial-polaroid-caption">
          {{ block.settings.caption }}
        </div>
      {% endif %}
    </div>
  {% endfor %}
</section>

<style>
.editorial-auto-scroll {
  width: 100vw;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
}
.editorial-polaroid-frame {
  width: 100vw;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #eaeada;
  position: relative;
  transition: opacity 0.45s;
}
.editorial-polaroid-img {
  width: 100%;
  height: auto;
  border-radius: 0;
  object-fit: cover;
  background: #e6e6e6;
  display: none;
}
/* Only show desktop image on desktop, mobile image on mobile */
.editorial-polaroid-img--desktop { display: block; }
.editorial-polaroid-img--mobile { display: none; }

@media (max-width: 700px) {
  .editorial-polaroid-frame {
    padding: var(--mobile-border-width, 8px) !important;
    max-width: var(--mobile-max-width, 360px) !important;
    margin-top: var(--mobile-margin-top, 0px) !important;
    margin-bottom: var(--mobile-margin-bottom, 0px) !important;
  }
  .editorial-polaroid-caption {
    right: 10px;
    bottom: 6px;
    font-size: 10px;
  }
  .editorial-polaroid-img--desktop { display: none !important; }
  .editorial-polaroid-img--mobile { display: block !important; }
}
.editorial-polaroid-caption {
  position: absolute;
  right: 24px;
  bottom: 14px;
  font-family: 'Figtree', 'Inter', Arial, sans-serif;
  font-size: 13px;
  line-height: 1.1;
  color: #222;
  text-align: right;
  letter-spacing: 0.04em;
  opacity: 0.85;
  pointer-events: none;
  background: none;
}
.editorial-polaroid-placeholder {
  width: 100%;
  height: 340px;
  background: #f4f4f4;
  color: #b0b0b0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  border-radius: 4px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.getElementById('editorial-auto-scroll');
  const blocks = Array.from(section.querySelectorAll('.editorial-polaroid-frame'));
  let active = 0;
  let idleTimer = null;
  let lastUserTime = Date.now();
  const SCROLL_MARGIN = 200; // px from top

  // Utility: scroll so block is 200px from top
  function scrollToBlock(idx, smooth = true) {
    if (blocks[idx]) {
      const top = blocks[idx].getBoundingClientRect().top + window.scrollY - SCROLL_MARGIN;
      window.scrollTo({
        top: top,
        behavior: smooth ? "smooth" : "auto"
      });
      active = idx;
    }
  }

  function goToNextBlock() {
    if (active < blocks.length - 1) {
      scrollToBlock(active + 1, true);
    } else {
      // Fade out body, jump to first block, fade in (preserve 200px margin)
      document.body.style.transition = 'opacity 0.7s';
      document.body.style.opacity = '0';
      setTimeout(function() {
        const top = blocks[0].getBoundingClientRect().top + window.scrollY - SCROLL_MARGIN;
        window.scrollTo({top: top, behavior: "auto"});
        active = 0;
        setTimeout(function() {
          document.body.style.opacity = '1';
          setTimeout(()=>{document.body.style.transition = ''}, 700);
        }, 90);
      }, 700);
    }
  }

  function resetIdleTimer() {
    lastUserTime = Date.now();
    clearTimeout(idleTimer);
    idleTimer = setTimeout(checkIdle, 1200);
  }

  function checkIdle() {
    let now = Date.now();
    if (active === blocks.length - 1) {
      // If on last block, wait 10s before looping
      if (now - lastUserTime >= 10000) {
        goToNextBlock();
        lastUserTime = Date.now();
      }
    } else if (now - lastUserTime >= 5000) {
      goToNextBlock();
      lastUserTime = Date.now();
    }
    idleTimer = setTimeout(checkIdle, 1000);
  }

  // Any pointer movement resets auto-scroll
  ['mousemove','mousedown','scroll','touchmove','keydown'].forEach(evt =>
    window.addEventListener(evt, resetIdleTimer, {passive:true})
  );

  // Initial state: scroll to first block (with margin)
  scrollToBlock(0, false);
  setTimeout(checkIdle, 5000);
});
</script>

{% schema %}
{
  "name": "Editorial Vertical",
  "tag": "section",
  "max_blocks": 10,
  "settings": [
    {
      "type": "header",
      "content": "Editorial vertical auto-scroll",
      "info": "All blocks stacked, scrolls to next block after 5s inactivity, then fades/jumps to top after 10s on last block."
    }
  ],
  "blocks": [
    {
      "type": "photo",
      "name": "Photo Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image (optional, falls back to desktop if empty)"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption/Label (optional)",
          "default": "Caption"
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border color",
          "default": "#eaeada"
        },
        {
          "type": "range",
          "id": "border_width",
          "min": 0,
          "max": 72,
          "step": 2,
          "label": "Border width (desktop, px)",
          "default": 24
        },
        {
          "type": "range",
          "id": "max_width",
          "min": 320,
          "max": 1200,
          "step": 20,
          "label": "Max image width (desktop, px)",
          "default": 840
        },
        {
          "type": "range",
          "id": "border_width_mobile",
          "min": 0,
          "max": 48,
          "step": 2,
          "label": "Border width (mobile, px)",
          "default": 8
        },
        {
          "type": "range",
          "id": "max_width_mobile",
          "min": 160,
          "max": 600,
          "step": 20,
          "label": "Max image width (mobile, px)",
          "default": 360
        },
        {
          "type": "range",
          "id": "margin_top",
          "min": 0,
          "max": 300,
          "step": 4,
          "label": "Desktop Top Margin (px)",
          "default": 0
        },
        {
