{% comment %} /sections/faq-section.liquid {% endcomment %}
<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }
  .faq-section__title {
    font-size: clamp(1.8rem, 5vw, 2.2rem);
    font-weight: 700;
    margin-bottom: 48px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: {{ section.settings.text_color }};
  }
  .faq-list {
    max-width: 750px;
    width: 100%;
    text-align: left;
  }
  .faq-item details {
    margin-bottom: 15px;
    border-bottom: 1px solid {{ section.settings.text_color | color_modify: 'alpha', 0.2 }};
    padding: 25px 0;
  }
  .faq-item summary {
    font-weight: 500;
    font-size: 1.1rem;
    cursor: pointer;
    list-style: none;
    position: relative;
    padding-right: 30px;
    color: {{ section.settings.text_color }};
  }
  .faq-item summary::-webkit-details-marker { display: none; }
  .faq-item summary::after {
    content: '+';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.5rem;
    font-weight: 400;
    color: {{ section.settings.text_color | color_modify: 'alpha', 0.5 }};
    transition: transform 0.3s ease;
  }
  .faq-item details[open] summary::after {
    transform: translateY(-50%) rotate(45deg);
  }
  .faq-item__answer {
    padding-top: 20px;
    color: {{ section.settings.text_color | color_modify: 'alpha', 0.7 }};
    line-height: 1.7;
    max-width: 90%;
  }
</style>

<section class="fullscreen-section">
  <h2 class="faq-section__title">{{ section.settings.title }}</h2>
  <div class="faq-list">
    {%- for block in section.blocks -%}
      <div class="faq-item">
        <details>
          <summary>{{ block.settings.question }}</summary>
          <div class="faq-item__answer">{{ block.settings.answer }}</div>
        </details>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Secção de FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título da Secção",
      "default": "Apoio ao Cliente"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Cor de Fundo",
      "default": "#f5f0eb"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do Texto",
      "default": "#1a1a1a"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "Pergunta e Resposta",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Pergunta",
          "default": "Qual é a vossa política de devoluções?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Resposta",
          "default": "<p>Pode devolver qualquer artigo no prazo de 30 dias.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Secção de FAQ"
    }
  ]
}
{% endschema %}
