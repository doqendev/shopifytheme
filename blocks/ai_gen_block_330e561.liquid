{% doc %}
  @prompt
    an accordion to be used as footer more info
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-accordion-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
  }

  .ai-footer-accordion-item-{{ ai_gen_id }} {
    border-bottom: {{ block.settings.divider_thickness }}px solid {{ block.settings.divider_color }};
  }

  .ai-footer-accordion-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-footer-accordion-header-{{ ai_gen_id }} {
    width: 100%;
    background: none;
    border: none;
    padding: {{ block.settings.item_padding }}px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    text-align: left;
    color: {{ block.settings.header_text_color }};
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: {{ block.settings.header_font_weight }};
    transition: color 0.3s ease;
  }

  .ai-footer-accordion-header-{{ ai_gen_id }}:hover {
    color: {{ block.settings.header_hover_color }};
  }

  .ai-footer-accordion-header-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.header_text_color }};
    outline-offset: 2px;
  }

  .ai-footer-accordion-title-{{ ai_gen_id }} {
    flex-grow: 1;
    margin: 0;
  }

  .ai-footer-accordion-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 12px;
  }

  .ai-footer-accordion-icon-{{ ai_gen_id }}.active {
    transform: rotate(180deg);
  }

  .ai-footer-accordion-content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    color: {{ block.settings.content_text_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.5;
  }

  .ai-footer-accordion-content-{{ ai_gen_id }}.active {
    max-height: 500px;
  }

  .ai-footer-accordion-content-inner-{{ ai_gen_id }} {
    padding-bottom: {{ block.settings.item_padding }}px;
    padding-right: {{ block.settings.icon_size | plus: 12 }}px;
  }

  .ai-footer-accordion-content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: none;
  }

  .ai-footer-accordion-content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  .ai-footer-accordion-content-{{ ai_gen_id }} ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-footer-accordion-content-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-footer-accordion-content-{{ ai_gen_id }} li:last-child {
    margin-bottom: 0;
  }

  @media screen and (min-width: 750px) {
    .ai-footer-accordion-{{ ai_gen_id }} {
      {% if block.settings.desktop_behavior == 'always_open' %}
        pointer-events: none;
      {% endif %}
    }

    {% if block.settings.desktop_behavior == 'always_open' %}
      .ai-footer-accordion-header-{{ ai_gen_id }} {
        cursor: default;
        pointer-events: none;
      }

      .ai-footer-accordion-icon-{{ ai_gen_id }} {
        display: none;
      }

      .ai-footer-accordion-content-{{ ai_gen_id }} {
        max-height: none;
        overflow: visible;
      }

      .ai-footer-accordion-content-inner-{{ ai_gen_id }} {
        padding-right: 0;
      }
    {% endif %}
  }
{% endstyle %}

<footer-accordion-{{ ai_gen_id }}
  class="ai-footer-accordion-{{ ai_gen_id }}"
  data-desktop-behavior="{{ block.settings.desktop_behavior }}"
  {{ block.shopify_attributes }}
>
  {% for i in (1..5) %}
    {% liquid
      assign title_key = 'section_' | append: i | append: '_title'
      assign content_key = 'section_' | append: i | append: '_content'
      assign enabled_key = 'section_' | append: i | append: '_enabled'
      
      assign title = block.settings[title_key]
      assign content = block.settings[content_key]
      assign enabled = block.settings[enabled_key]
    %}

    {% if enabled and title != blank %}
      <div class="ai-footer-accordion-item-{{ ai_gen_id }}">
        <button
          class="ai-footer-accordion-header-{{ ai_gen_id }}"
          aria-expanded="{% if block.settings.desktop_behavior == 'always_open' %}true{% else %}false{% endif %}"
          aria-controls="ai-footer-accordion-content-{{ ai_gen_id }}-{{ i }}"
          data-accordion-trigger="{{ i }}"
        >
          <h3 class="ai-footer-accordion-title-{{ ai_gen_id }}">{{ title }}</h3>
          <svg
            class="ai-footer-accordion-icon-{{ ai_gen_id }} {% if block.settings.desktop_behavior == 'always_open' %}active{% endif %}"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <polyline points="6,9 12,15 18,9"></polyline>
          </svg>
        </button>
        <div
          class="ai-footer-accordion-content-{{ ai_gen_id }} {% if block.settings.desktop_behavior == 'always_open' %}active{% endif %}"
          id="ai-footer-accordion-content-{{ ai_gen_id }}-{{ i }}"
          data-accordion-content="{{ i }}"
        >
          <div class="ai-footer-accordion-content-inner-{{ ai_gen_id }}">
            {{ content }}
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</footer-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class FooterAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.desktopBehavior = this.dataset.desktopBehavior;
      }

      connectedCallback() {
        this.triggers = this.querySelectorAll('[data-accordion-trigger]');
        this.contents = this.querySelectorAll('[data-accordion-content]');
        this.icons = this.querySelectorAll('.ai-footer-accordion-icon-{{ ai_gen_id }}');
        
        this.setupEventListeners();
        this.handleResize();
        window.addEventListener('resize', this.handleResize.bind(this));
      }

      setupEventListeners() {
        this.triggers.forEach((trigger, index) => {
          trigger.addEventListener('click', () => {
            if (this.shouldIgnoreClick()) return;
            
            const content = this.contents[index];
            const icon = this.icons[index];
            const isExpanded = trigger.getAttribute('aria-expanded') === 'true';

            if (isExpanded) {
              this.closeAccordion(trigger, content, icon);
            } else {
              this.openAccordion(trigger, content, icon);
            }
          });
        });
      }

      shouldIgnoreClick() {
        return window.innerWidth >= 750 && this.desktopBehavior === 'always_open';
      }

      openAccordion(trigger, content, icon) {
        trigger.setAttribute('aria-expanded', 'true');
        content.classList.add('active');
        icon.classList.add('active');
      }

      closeAccordion(trigger, content, icon) {
        trigger.setAttribute('aria-expanded', 'false');
        content.classList.remove('active');
        icon.classList.remove('active');
      }

      handleResize() {
        if (window.innerWidth >= 750 && this.desktopBehavior === 'always_open') {
          this.triggers.forEach((trigger, index) => {
            trigger.setAttribute('aria-expanded', 'true');
            this.contents[index].classList.add('active');
            this.icons[index].classList.add('active');
          });
        } else if (window.innerWidth < 750) {
          this.triggers.forEach((trigger, index) => {
            trigger.setAttribute('aria-expanded', 'false');
            this.contents[index].classList.remove('active');
            this.icons[index].classList.remove('active');
          });
        }
      }
    }

    customElements.define('footer-accordion-{{ ai_gen_id }}', FooterAccordion{{ ai_gen_id }});
  })();
</script>

