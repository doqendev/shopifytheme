{% doc %}
  @prompt
    a simple section for an image. 
    
    I want to be able to add margin or padding and also want to have an option for the image to be full width
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    {% if block.settings.full_width %}
      max-width: 100%;
    {% else %}
      max-width: {{ block.settings.desktop_width_percent }}%;
    {% endif %}
    margin: 0 auto;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
  }

  .ai-image-block-wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
  }

  .ai-image-block-img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-image-block-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-image-block-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-block-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-image-block-{{ ai_gen_id }} {
      padding-top: {{ block.settings.mobile_padding_top }}px;
      padding-bottom: {{ block.settings.mobile_padding_bottom }}px;
      padding-left: {{ block.settings.mobile_padding_left }}px;
      padding-right: {{ block.settings.mobile_padding_right }}px;
    }
  }
{% endstyle %}

<simple-image-{{ ai_gen_id }} class="ai-image-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-block-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-image-block-img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-block-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-block-empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</simple-image-{{ ai_gen_id }}>

